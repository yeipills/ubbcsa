<section class="min-h-screen bg-gray-900 flex flex-col items-center px-8 sm:px-16 py-12">
  <div class="text-center max-w-5xl w-full">
    <!-- HERO SECTION -->
    <header class="space-y-6">
      <h1 class="text-6xl font-extrabold text-white tracking-tight">
        Bienvenido a <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-blue-300">UBB CSA</span>
      </h1>
      <p class="text-lg text-gray-300 max-w-4xl mx-auto">
        Formación avanzada en ciberseguridad con especialización en seguridad ofensiva, defensa digital e inteligencia cibernética. Aprende de expertos en un entorno seguro.
      </p>
      <!-- BOTONES -->
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-6 w-full">
        <%= link_to "Iniciar Sesión", 
            new_usuario_session_path, 
            class: "px-8 py-4 text-lg font-medium text-white bg-blue-600 rounded-lg shadow-lg hover:bg-blue-500 focus:ring focus:ring-blue-400 transition-all" %>
        <%= link_to "Explorar Programas", 
            "#programs", 
            class: "px-8 py-4 text-lg font-medium text-white bg-gray-800 border border-gray-600 rounded-lg hover:bg-gray-700 focus:ring focus:ring-gray-500 transition-all" %>
      </div>
    </header>

    <!-- PROGRAMAS -->
    <main id="programs" class="mt-24 max-w-6xl mx-auto py-20 w-full">
      <h2 class="text-4xl font-bold text-white text-center mb-12">Nuestros Programas</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% programs = [
          { title: "Seguridad Ofensiva", icon: "💀", description: "Domina técnicas de pentesting y explotación de vulnerabilidades.", topics: ["Red Team Operations", "Exploit Development", "Vulnerability Research"] },
          { title: "Defensa Digital", icon: "🔒", description: "Aprende estrategias de ciberdefensa y respuesta a incidentes.", topics: ["Blue Team Strategies", "SIEM Implementation", "Incident Response"] },
          { title: "Inteligencia Ciber", icon: "🕵️", description: "Analiza amenazas y protege sistemas con inteligencia cibernética.", topics: ["Threat Intelligence", "Malware Analysis", "Digital Forensics"] }
        ] %>
        
        <% programs.each do |program| %>
          <article class="bg-gray-800 rounded-xl p-8 shadow-lg flex flex-col items-center text-center w-full space-y-6 hover:scale-105 transition-transform">
            <div class="text-6xl"><%= program[:icon] %></div>
            <h3 class="text-2xl font-bold text-white"><%= program[:title] %></h3>
            <p class="text-gray-300 text-md leading-relaxed w-full"><%= program[:description] %></p>
            <ul class="text-gray-400 text-sm space-y-2 w-full">
              <% program[:topics].each do |topic| %>
                <li class="flex items-center justify-center gap-2">
                  ✅ <%= topic %>
                </li>
              <% end %>
            </ul>
          </article>
        <% end %>
      </div>
    </main>

    <!-- CALL TO ACTION -->
    <section class="mt-24 py-20 text-center">
      <h2 class="text-4xl font-bold text-white">¿Listo para mejorar tus habilidades?</h2>
      <p class="text-gray-300 text-lg mt-4">Únete a nuestra academia hoy mismo.</p>
      <div class="mt-6">
        <%= link_to "Registrarme Ahora", 
            new_usuario_registration_path, 
            class: "px-8 py-4 text-lg font-medium text-white bg-green-600 rounded-lg shadow-lg hover:bg-green-500 focus:ring focus:ring-green-400 transition-all" %>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="mt-24 py-10 border-t border-gray-700 text-center">
      <p class="text-gray-400">© 2024 UBB CSA. Todos los derechos reservados.</p>
      <div class="flex justify-center gap-6 mt-4">
        <%= link_to "Facebook", "https://facebook.com", target: "_blank", class: "text-gray-400 hover:text-white" %>
        <%= link_to "Twitter", "https://twitter.com", target: "_blank", class: "text-gray-400 hover:text-white" %>
        <%= link_to "LinkedIn", "https://linkedin.com", target: "_blank", class: "text-gray-400 hover:text-white" %>
      </div>
    </footer>
  </div>
</section>