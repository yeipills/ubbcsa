<%# app/views/quiz_resumen/index.html.erb %>
<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>a
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header con título mejorado -->
    <div class="mb-6">
      <h1 class="text-2xl md:text-3xl font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-indigo-500">
        Panel de Quizzes
      </h1>
      <p class="mt-2 text-gray-400">Un resumen de tus quizzes y actividad reciente</p>
    </div>

    <!-- Estadísticas en tarjetas con animación en hover -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-5 mb-8">
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-5 border border-gray-700 hover:border-blue-500/40 shadow-lg transition-all duration-300 hover:shadow-blue-900/10 hover:shadow-md group">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors">Total Quizzes</p>
            <h3 class="text-2xl font-bold text-white mt-1"><%= @stats[:total_quizzes] %></h3>
          </div>
          <div class="p-2 bg-blue-900/30 rounded-lg group-hover:bg-blue-900/50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-5 border border-gray-700 hover:border-green-500/40 shadow-lg transition-all duration-300 hover:shadow-green-900/10 hover:shadow-md group">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors">Quizzes Activos</p>
            <h3 class="text-2xl font-bold text-white mt-1"><%= @stats[:quizzes_activos] %></h3>
          </div>
          <div class="p-2 bg-green-900/30 rounded-lg group-hover:bg-green-900/50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-5 border border-gray-700 hover:border-yellow-500/40 shadow-lg transition-all duration-300 hover:shadow-yellow-900/10 hover:shadow-md group">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors">Próximos</p>
            <h3 class="text-2xl font-bold text-white mt-1"><%= @stats[:quizzes_proximos] %></h3>
          </div>
          <div class="p-2 bg-yellow-900/30 rounded-lg group-hover:bg-yellow-900/50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl p-5 border border-gray-700 hover:border-purple-500/40 shadow-lg transition-all duration-300 hover:shadow-purple-900/10 hover:shadow-md group">
        <div class="flex justify-between items-start">
          <div>
            <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors">Finalizados</p>
            <h3 class="text-2xl font-bold text-white mt-1"><%= @stats[:quizzes_finalizados] %></h3>
          </div>
          <div class="p-2 bg-purple-900/30 rounded-lg group-hover:bg-purple-900/50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Layout principal con responsive design -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Lista de Quizzes - 2/3 del espacio en pantallas grandes -->
      <div class="lg:col-span-2">
        <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden">
          <div class="border-b border-gray-700 p-4 bg-gradient-to-r from-gray-800 to-gray-900">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-white">
                <%= current_usuario.profesor? || current_usuario.admin? ? "Tus Quizzes" : "Quizzes Disponibles" %>
              </h2>
              
              <% if current_usuario.profesor? || current_usuario.admin? %>
                <% if current_usuario.todos_cursos.any? %>
                  <%= link_to new_curso_quiz_path(current_usuario.todos_cursos.first), 
                      class: "inline-flex items-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Nuevo Quiz
                  <% end %>
                <% else %>
                  <%= link_to new_curso_path, 
                      class: "inline-flex items-center px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                    </svg>
                    Crear Curso
                  <% end %>
                <% end %>
              <% else %>
                <%= link_to quizzes_path, 
                    class: "inline-flex items-center px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors" do %>
                  Ver todos
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>

          <% if @quizzes.any? %>
            <div class="divide-y divide-gray-700">
              <% @quizzes.take(7).each do |quiz| %>
                <div class="p-4 hover:bg-gray-750 transition-colors">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                    <div class="flex items-start">
                      <div class="flex-shrink-0 mr-3">
                        <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                          </svg>
                        </div>
                      </div>
                      <div>
                        <h3 class="text-white font-medium hover:text-blue-400 transition-colors">
                          <%= link_to quiz.titulo, quiz_path(quiz) %>
                        </h3>
                        <div class="flex flex-wrap items-center gap-2 mt-1">
                          <span class="px-2 py-0.5 text-xs rounded-full 
                                      <%= case quiz.estado
                                          when 'borrador' then 'bg-gray-700 text-gray-300'
                                          when 'publicado' then 'bg-green-900/30 text-green-300'
                                          when 'cerrado' then 'bg-red-900/30 text-red-300'
                                          end %>">
                            <%= quiz.estado.titleize %>
                          </span>
                          <span class="text-gray-500 text-xs">
                            <%= quiz.curso.nombre %>
                          </span>
                          <span class="text-gray-500 text-xs hidden sm:inline">
                            <% if Time.current < quiz.fecha_inicio %>
                              Inicia en <%= distance_of_time_in_words(Time.current, quiz.fecha_inicio) %>
                            <% elsif Time.current > quiz.fecha_fin %>
                              Finalizado el <%= l quiz.fecha_fin, format: :short %>
                            <% else %>
                              Finaliza en <%= distance_of_time_in_words(Time.current, quiz.fecha_fin) %>
                            <% end %>
                          </span>
                        </div>
                      </div>
                    </div>
                    
                    <div class="sm:flex-shrink-0">
                      <% if current_usuario.estudiante? && quiz.publicado? && Time.current.between?(quiz.fecha_inicio, quiz.fecha_fin) %>
                        <% intentos = IntentoQuiz.where(quiz: quiz, usuario: current_usuario) %>
                        <% if intento_en_progreso = intentos.en_progreso.first %>
                          <%= link_to quiz_intento_path(quiz, intento_en_progreso), 
                              class: "inline-flex items-center px-3 py-1.5 bg-amber-600 hover:bg-amber-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Continuar
                          <% end %>
                        <% elsif intentos.count < quiz.intentos_permitidos %>
                          <%= button_to quiz_intentos_path(quiz), method: :post, 
                              class: "inline-flex items-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Iniciar
                          <% end %>
                        <% else %>
                          <span class="px-3 py-1.5 bg-gray-700 text-gray-400 text-sm font-medium rounded-lg inline-block">
                            Intentos agotados
                          </span>
                        <% end %>
                      <% else %>
                        <%= link_to quiz_path(quiz), 
                            class: "inline-flex items-center px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg>
                          Ver Detalles
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            
            <% if @quizzes.count > 7 %>
              <div class="border-t border-gray-700 p-4 text-center">
                <%= link_to quizzes_path, class: "text-blue-400 hover:text-blue-300 font-medium" do %>
                  Ver todos los quizzes
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="p-8 text-center">
              <div class="mx-auto w-16 h-16 rounded-full bg-gray-700/50 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
              </div>
              <h3 class="text-white font-medium mb-2">No hay quizzes disponibles</h3>
              <p class="text-gray-400 mb-6">No se encontraron quizzes activos para ti en este momento.</p>
              
              <% if current_usuario.profesor? && current_usuario.todos_cursos.any? %>
                <%= link_to new_curso_quiz_path(current_usuario.todos_cursos.first), 
                    class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                  </svg>
                  Crear primer quiz
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Actividad Reciente - Para todos los usuarios -->
        <div class="mt-6 bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden">
          <div class="border-b border-gray-700 p-4 bg-gradient-to-r from-gray-800 to-gray-900">
            <h2 class="text-lg font-medium text-white">Actividad Reciente</h2>
          </div>

          <% if @intentos_recientes.any? %>
            <div class="divide-y divide-gray-700">
              <% @intentos_recientes.each do |intento| %>
                <div class="p-4 hover:bg-gray-750 transition-colors">
                  <div class="flex items-center justify-between">
                    <div class="flex items-start">
                      <div class="flex-shrink-0 mr-3">
                        <% if intento.completado? %>
                          <div class="w-10 h-10 rounded-full bg-green-900/30 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                          </div>
                        <% elsif intento.en_progreso? %>
                          <div class="w-10 h-10 rounded-full bg-amber-900/30 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                          </div>
                        <% else %>
                          <div class="w-10 h-10 rounded-full bg-red-900/30 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                          </div>
                        <% end %>
                      </div>
                      <div>
                        <h3 class="text-white font-medium">
                          <%= link_to intento.quiz.titulo, quiz_path(intento.quiz), class: "hover:text-blue-400 transition-colors" %>
                        </h3>
                        <div class="flex flex-wrap items-center gap-2 mt-1">
                          <span class="px-2 py-0.5 text-xs rounded-full 
                                      <%= case intento.estado
                                          when 'en_progreso' then 'bg-amber-900/30 text-amber-300'
                                          when 'completado' then 'bg-green-900/30 text-green-300'
                                          when 'expirado' then 'bg-red-900/30 text-red-300'
                                          when 'abandonado' then 'bg-gray-700 text-gray-300'
                                          else 'bg-gray-700 text-gray-300'
                                          end %>">
                            <%= intento.estado.humanize %>
                          </span>
                          <% if intento.completado? %>
                            <span class="text-white text-xs font-medium">
                              <%= number_to_percentage(intento.puntaje_total, precision: 0) %>
                            </span>
                          <% elsif intento.en_progreso? %>
                            <span class="text-gray-400 text-xs">
                              <%= intento.progreso_porcentaje %>% completado
                            </span>
                          <% end %>
                          <span class="text-gray-500 text-xs">
                            <%= l intento.created_at, format: :short %>
                          </span>
                        </div>
                      </div>
                    </div>

                    <div>
                      <% if intento.en_progreso? %>
                        <%= link_to quiz_intento_path(intento.quiz, intento), 
                            class: "inline-flex items-center px-3 py-1.5 bg-amber-600 hover:bg-amber-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
                          Continuar
                        <% end %>
                      <% elsif intento.completado? %>
                        <%= link_to resultados_quiz_intento_path(intento.quiz, intento), 
                            class: "inline-flex items-center px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-sm font-medium rounded-lg transition-colors" do %>
                          Ver Resultado
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <% if @rendimiento %>
              <div class="border-t border-gray-700 p-4 bg-gray-850/50">
                <div class="grid grid-cols-3 gap-4">
                  <div class="text-center">
                    <p class="text-gray-400 text-xs">Puntaje Promedio</p>
                    <p class="text-xl font-bold text-white"><%= number_to_percentage(@rendimiento[:promedio], precision: 0) %></p>
                  </div>
                  <div class="text-center">
                    <p class="text-gray-400 text-xs">Completados</p>
                    <p class="text-xl font-bold text-white"><%= @rendimiento[:completados] %>/<%= @rendimiento[:total] %></p>
                  </div>
                  <div class="text-center">
                    <p class="text-gray-400 text-xs">Mejor Puntaje</p>
                    <p class="text-xl font-bold text-white"><%= number_to_percentage(@rendimiento[:mejor_puntaje], precision: 0) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="p-6 text-center">
              <div class="mx-auto w-14 h-14 rounded-full bg-gray-700/50 flex items-center justify-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-white font-medium mb-2">No hay actividad reciente</h3>
              <p class="text-gray-400">No has realizado ningún intento de quiz recientemente.</p>
              
              <% if @quizzes.any? %>
                <div class="mt-4">
                  <%= link_to quizzes_path, 
                      class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                    </svg>
                    Ver quizzes disponibles
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Panel Lateral - Depende del rol del usuario -->
      <div>
        <% if current_usuario.profesor? || current_usuario.admin? %>
          <!-- Estadísticas para Profesores -->
          <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden mb-6">
            <div class="border-b border-gray-700 p-4 bg-gradient-to-r from-gray-800 to-gray-900">
              <h2 class="text-lg font-medium text-white">Estadísticas de Rendimiento</h2>
            </div>
            
            <div class="p-5 space-y-5">
              <% if @quizzes_profesor&.any? %>
                <div class="grid grid-cols-2 gap-4">
                  <div class="p-3 bg-gray-750 rounded-lg text-center">
                    <p class="text-sm text-gray-400">Tasa de Aprobación</p>
                    <p class="text-xl font-bold text-white"><%= number_to_percentage(@tasa_aprobacion, precision: 0) %></p>
                  </div>
                  <div class="p-3 bg-gray-750 rounded-lg text-center">
                    <p class="text-sm text-gray-400">Promedio General</p>
                    <p class="text-xl font-bold text-white"><%= number_to_percentage(@promedio_puntajes, precision: 0) %></p>
                  </div>
                </div>
                
                <div class="p-3 bg-gray-750 rounded-lg">
                  <p class="text-sm text-gray-400 text-center mb-2">Participación Estudiantes</p>
                  <div class="flex items-center justify-center">
                    <div class="w-14 h-14 rounded-full bg-blue-900/30 flex items-center justify-center mr-3">
                      <span class="text-xl font-bold text-blue-300"><%= @total_estudiantes %></span>
                    </div>
                    <div class="text-sm text-gray-300">
                      <p>Estudiantes han realizado</p>
                      <p>al menos un intento</p>
                    </div>
                  </div>
                </div>
                
                <% if @quizzes_populares&.any? %>
                  <div>
                    <h3 class="text-sm font-medium text-white mb-2">Quizzes Más Populares</h3>
                    <ul class="space-y-2">
                      <% @quizzes_populares.each do |quiz| %>
                        <li class="p-2 bg-gray-750 rounded-lg">
                          <div class="flex justify-between items-center">
                            <span class="text-gray-300 truncate max-w-[150px]" title="<%= quiz.titulo %>">
                              <%= link_to quiz.titulo, quiz_path(quiz), class: "hover:text-blue-400 transition-colors" %>
                            </span>
                            <span class="px-2 py-0.5 bg-blue-900/30 text-blue-300 text-xs rounded-full">
                              <%= quiz.intentos_count %> intentos
                            </span>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                
                <div class="pt-2">
                  <% if @quizzes_profesor.any? %>
                    <%= link_to quiz_quiz_results_path(@quizzes_profesor.first), 
                        class: "w-full inline-block text-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors" do %>
                      Ver todos los resultados
                    <% end %>
                  <% else %>
                    <p class="text-center text-gray-400">No hay quizzes disponibles</p>
                  <% end %>
                </div>
              <% else %>
                <div class="p-4 text-center">
                  <p class="text-gray-400">No hay datos de rendimiento disponibles todavía.</p>
                </div>
              <% end %>
            </div>
          </div>
        <% elsif current_usuario.estudiante? %>
          <!-- Para estudiantes: Quizzes disponibles -->
          <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden mb-6">
            <div class="border-b border-gray-700 p-4 bg-gradient-to-r from-gray-800 to-gray-900">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <h2 class="text-lg font-medium text-white">Quizzes Disponibles</h2>
              </div>
            </div>
            
            <% if @quizzes_disponibles&.any? %>
              <div class="divide-y divide-gray-700">
                <% @quizzes_disponibles.each do |quiz| %>
                  <div class="p-4 hover:bg-gray-750 transition-colors">
                    <div class="flex justify-between items-start">
                      <div>
                        <h3 class="text-white font-medium">
                          <%= link_to quiz.titulo, quiz_path(quiz), class: "hover:text-blue-400 transition-colors" %>
                        </h3>
                        <div class="flex items-center mt-1">
                          <% estado = @estado_quizzes[quiz.id][:estado] rescue 'disponible' %>
                          <span class="px-2 py-0.5 text-xs rounded-full mr-2
                                      <%= case estado
                                          when 'en_progreso' then 'bg-amber-900/30 text-amber-300'
                                          when 'completado' then 'bg-green-900/30 text-green-300'
                                          else 'bg-blue-900/30 text-blue-300'
                                          end %>">
                            <%= estado.humanize %>
                          </span>
                          
                          <% if estado == 'completado' && @estado_quizzes[quiz.id][:puntaje] %>
                            <span class="text-xs text-white">
                              <%= number_to_percentage(@estado_quizzes[quiz.id][:puntaje], precision: 0) %>
                            </span>
                          <% end %>
                        </div>
                        <p class="text-xs text-red-400 mt-1">
                          Finaliza en <%= distance_of_time_in_words(Time.current, quiz.fecha_fin) %>
                        </p>
                      </div>
                      
                      <div>
                        <% if estado == 'en_progreso' %>
                          <%= link_to quiz_intento_path(quiz, @estado_quizzes[quiz.id][:intento_id]), 
                              class: "px-3 py-1.5 bg-amber-600 hover:bg-amber-700 text-white text-xs font-medium rounded-lg inline-block" do %>
                            Continuar
                          <% end %>
                        <% elsif estado == 'disponible' %>
                          <%= button_to quiz_intentos_path(quiz), method: :post, 
                              class: "px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded-lg" do %>
                            Iniciar
                          <% end %>
                        <% else %>
                          <%= link_to quiz_path(quiz), 
                              class: "px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-white text-xs font-medium rounded-lg inline-block" do %>
                            Ver
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="p-6 text-center">
                <p class="text-gray-400">No hay quizzes disponibles en este momento.</p>
              </div>
            <% end %>
          </div>
          
          <!-- Quizzes Próximos -->
          <% if @quizzes_proximos&.any? %>
            <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden">
              <div class="border-b border-gray-700 p-4 bg-gradient-to-r from-gray-800 to-gray-900">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  <h2 class="text-lg font-medium text-white">Próximamente</h2>
                </div>
              </div>
              
              <div class="divide-y divide-gray-700">
                <% @quizzes_proximos.each do |quiz| %>
                  <div class="p-4 hover:bg-gray-750 transition-colors">
                    <h3 class="text-white font-medium">
                      <%= link_to quiz.titulo, quiz_path(quiz), class: "hover:text-blue-400 transition-colors" %>
                    </h3>
                    <p class="text-xs text-blue-400 mt-1">
                      Inicia en <%= distance_of_time_in_words(Time.current, quiz.fecha_inicio) %>
                    </p>
                    <p class="text-xs text-gray-400 mt-1">
                      <%= quiz.curso.nombre %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
