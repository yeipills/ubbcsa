<%= form_with(model: [@quiz, @pregunta], local: true, class: "space-y-6") do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :contenido, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :contenido, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :tipo, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :tipo, QuizPregunta.tipos.keys.map { |t| [t.humanize, t] }, 
          {}, class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>

    <div>
      <%= f.label :puntaje, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :puntaje, min: 1, step: 0.5, 
          class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>

    <div>
      <%= f.label :orden, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :orden, min: 1, 
          class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancelar', quiz_path(@quiz), 
        class: "px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>