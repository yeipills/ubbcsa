<%# app/views/quiz_preguntas/_form.html.erb %>
<%= form_with(model: @pregunta, 
              url: @pregunta.new_record? ? quiz_preguntas_path(@quiz) : quiz_pregunta_path(@quiz, @pregunta), 
              local: true, 
              class: "space-y-6", 
              html: { id: "pregunta-form" },
              data: { controller: "pregunta-form", turbo: false }) do |f| %>
  <% if @pregunta.errors.any? %>
    <div class="bg-red-900/50 p-4 rounded-xl border border-red-800/50 mb-6 shadow-md">
      <h2 class="text-red-300 font-medium mb-2 text-sm flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <%= pluralize(@pregunta.errors.count, "error") %> impidieron guardar esta pregunta:
      </h2>
      <ul class="list-disc list-inside text-red-300 text-sm space-y-1 ml-7">
        <% @pregunta.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Contenedor para la vista previa de la pregunta -->
  <div data-pregunta-form-target="previewContainer" class="hidden fixed inset-0 bg-gray-900/90 z-50 flex items-center justify-center p-6">
    <div class="w-full max-w-3xl max-h-[90vh] overflow-auto rounded-xl shadow-2xl" data-pregunta-form-target="previewContent"></div>
  </div>

  <!-- Sección 1: Contenido de la pregunta -->
  <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden">
    <div class="bg-gray-700/50 py-3 px-4 border-b border-gray-700">
      <h3 class="text-white font-medium flex items-center">
        <div class="flex-shrink-0 bg-indigo-600 rounded-full p-1 mr-2">
          <span class="flex items-center justify-center h-5 w-5 text-white font-medium">1</span>
        </div>
        Enunciado y Contenido General
      </h3>
    </div>
    
    <div class="p-6 space-y-6">
      <!-- Enunciado de la pregunta -->
      <div class="group">
        <%= f.label :contenido, "Enunciado de la pregunta", class: "form-label required-field block text-gray-200 font-medium text-sm mb-1.5 flex items-center" do %>
          Enunciado de la pregunta
          <div class="ml-2 group relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 cursor-help" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="hidden group-hover:block absolute left-0 bottom-full mb-2 w-64 p-2 bg-gray-700 text-xs text-gray-300 rounded shadow-lg z-10">
              El enunciado debe ser claro y específico. Formule la pregunta de manera que los estudiantes puedan comprender exactamente qué se les está preguntando.
            </div>
          </div>
        <% end %>
        
        <%= f.text_area :contenido, rows: 4, 
            class: "w-full bg-gray-800/50 border border-gray-700 rounded-md text-gray-200 p-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent shadow-inner",
            placeholder: "Escribe el enunciado o pregunta que verán los estudiantes...",
            data: { pregunta_form_target: "contenidoField" } %>
        
        <p class="mt-1.5 text-xs text-gray-400">Escribe de manera clara y concisa. Esta será la pregunta principal que verán los estudiantes.</p>
      </div>
      
      <!-- Puntaje y Orden -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="group">
          <%= f.label :puntaje, "Puntaje", class: "block text-sm font-medium text-gray-300 mb-2 flex items-center" do %>
            Puntaje
            <span class="text-red-400 ml-1 font-bold">*</span>
            <div class="ml-2 group relative">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 cursor-help" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="hidden group-hover:block absolute left-0 bottom-full mb-2 w-48 p-2 bg-gray-700 text-xs text-gray-300 rounded shadow-lg z-10">
                Valor numérico que recibirá el estudiante por responder correctamente esta pregunta.
              </div>
            </div>
          <% end %>
          
          <div class="relative">
            <%= f.number_field :puntaje, min: 0.5, step: 0.5, 
                class: "pl-10 block w-full rounded-lg border-gray-600 bg-gray-700/80 text-white focus:border-indigo-500 focus:ring-indigo-500 transition-colors shadow-sm" %>
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-400">Valor numérico para esta pregunta (mínimo 0.5)</p>
        </div>
        
        <div class="group">
          <%= f.label :orden, "Orden en el quiz", class: "block text-sm font-medium text-gray-300 mb-2 flex items-center" do %>
            Orden en el quiz
            <div class="ml-2 group relative">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 cursor-help" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="hidden group-hover:block absolute left-0 bottom-full mb-2 w-48 p-2 bg-gray-700 text-xs text-gray-300 rounded shadow-lg z-10">
                Posición en la que aparecerá esta pregunta dentro del quiz.
              </div>
            </div>
          <% end %>
          
          <div class="relative">
            <%= f.number_field :orden, min: 1, 
                class: "pl-10 block w-full rounded-lg border-gray-600 bg-gray-700/80 text-white focus:border-indigo-500 focus:ring-indigo-500 transition-colors shadow-sm" %>
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
              </svg>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-400">Posición de esta pregunta en el quiz</p>
        </div>
      </div>
      
      <!-- Imagen de la pregunta -->
      <div class="group">
        <%= f.label :imagen, "Imagen de la pregunta (opcional)", class: "block text-sm font-medium text-gray-300 mb-2 flex items-center" do %>
          Imagen de la pregunta
          <span class="text-gray-400 ml-2 text-xs">(Opcional)</span>
          <div class="ml-2 group relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 cursor-help" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="hidden group-hover:block absolute left-0 bottom-full mb-2 w-48 p-2 bg-gray-700 text-xs text-gray-300 rounded shadow-lg z-10">
              Añade una imagen para complementar visualmente tu pregunta.
            </div>
          </div>
        <% end %>
        
        <div class="mt-1">
          <div class="flex items-center">
            <div class="flex-1">
              <%= f.file_field :imagen, 
                  class: "w-full text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-600 file:text-white hover:file:bg-indigo-700 transition-colors",
                  accept: "image/*",
                  data: { action: "pregunta-form#previewImage" } %>
            </div>
          </div>
          
          <div data-pregunta-form-target="imagePreview" class="<%= @pregunta.imagen.attached? ? '' : 'hidden' %> mt-3 p-4 bg-gray-700/60 rounded-lg">
            <div class="flex justify-between items-center mb-2">
              <p class="text-gray-300 text-sm">Vista previa:</p>
              <label class="inline-flex items-center text-sm text-red-300 hover:text-red-200 cursor-pointer">
                <%= f.check_box :remove_imagen, 
                    class: "rounded border-gray-600 bg-gray-700 text-red-500 focus:ring-red-500 focus:ring-offset-gray-800 mr-1" %>
                <span class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  Eliminar imagen
                </span>
              </label>
            </div>
            
            <div class="bg-gray-800 p-2 rounded-lg flex justify-center">
              <% if @pregunta.imagen.attached? %>
                <%= image_tag @pregunta.imagen, class: "max-h-48 rounded object-contain" %>
              <% else %>
                <img class="max-h-48 rounded object-contain hidden" data-pregunta-form-target="previewImage">
              <% end %>
            </div>
          </div>
          
          <p class="mt-1 text-xs text-gray-400">Soporta formatos: JPG, PNG, GIF (max 5MB)</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Sección 2: Tipo de pregunta y opciones -->
  <div class="bg-gray-800 rounded-xl border border-gray-700 shadow-lg overflow-hidden">
    <div class="bg-gray-700/50 py-3 px-4 border-b border-gray-700">
      <h3 class="text-white font-medium flex items-center">
        <div class="flex-shrink-0 bg-indigo-600 rounded-full p-1 mr-2">
          <span class="flex items-center justify-center h-5 w-5 text-white font-medium">2</span>
        </div>
        Tipo de Pregunta y Opciones
      </h3>
    </div>

    <div class="p-6 space-y-6">
      <!-- Tipo de pregunta (solo lectura en este caso) -->
      <div class="bg-gray-900/50 rounded-lg border border-gray-700 p-4">
        <h4 class="text-sm font-medium text-white mb-3 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Tipo de pregunta seleccionado
        </h4>
        
        <div class="flex items-center space-x-3 mb-3">
          <% tipo_pregunta_clases = {
            'opcion_multiple': 'bg-indigo-900/50 text-indigo-300 border-indigo-800/50',
            'verdadero_falso': 'bg-green-900/50 text-green-300 border-green-800/50',
            'respuesta_corta': 'bg-blue-900/50 text-blue-300 border-blue-800/50',
            'emparejamiento': 'bg-red-900/50 text-red-300 border-red-800/50',
            'multiple_respuesta': 'bg-purple-900/50 text-purple-300 border-purple-800/50'
          } %>
          
          <div class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium border <%= tipo_pregunta_clases[@pregunta.tipo.to_sym] || 'bg-gray-700 text-white' %>">
            <% case @pregunta.tipo %>
            <% when 'opcion_multiple' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% when 'verdadero_falso' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            <% when 'respuesta_corta' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% when 'emparejamiento' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
              </svg>
            <% when 'multiple_respuesta' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            <% end %>
            <%= @pregunta.tipo_display %>
          </div>
          
          <!-- Campo oculto para el tipo (no puede cambiarse en esta vista pero debe enviarse) -->
          <%= f.hidden_field :tipo, 
              value: @pregunta.tipo,
              data: { action: "change->pregunta-form#tipoChanged", pregunta_form_target: "tipoSelect" } %>
        </div>
        
        <div class="p-3 bg-gradient-to-b from-gray-800 to-gray-800/70 rounded-lg shadow-inner">
          <p class="text-white text-sm flex items-start">
            <svg class="w-5 h-5 text-indigo-400 mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="tracking-wide">
              <% case @pregunta.tipo %>
              <% when 'opcion_multiple' %>
                Los estudiantes deben seleccionar una única opción correcta entre varias alternativas.
              <% when 'verdadero_falso' %>
                Pregunta simple que acepta solo dos posibles respuestas: Verdadero o Falso.
              <% when 'respuesta_corta' %>
                Los estudiantes deben escribir una respuesta breve que coincida exactamente con la respuesta correcta.
              <% when 'emparejamiento' %>
                Los estudiantes deben relacionar correctamente términos con sus definiciones correspondientes.
              <% when 'multiple_respuesta' %>
                Los estudiantes deben seleccionar todas las opciones correctas (puede haber más de una).
              <% end %>
            </span>
          </p>
        </div>
      </div>
      
      <!-- Opciones específicas según tipo de pregunta -->
      <div class="group">
        <% case @pregunta.tipo %>
        <% when 'opcion_multiple', 'verdadero_falso' %>
          <div>
            <div class="flex items-center justify-between mb-4">
              <h4 class="font-medium text-white flex items-center">
                <% if @pregunta.opcion_multiple? %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                  </svg>
                <% end %>
                Opciones de respuesta
                <span class="text-red-400 ml-1 font-bold">*</span>
              </h4>
              
              <div class="text-sm text-gray-400 bg-gray-700/60 px-3 py-1 rounded-lg">
                <% if @pregunta.verdadero_falso? %>
                  Marca la opción correcta (Verdadero o Falso)
                <% else %>
                  Marca exactamente una opción como correcta
                <% end %>
              </div>
            </div>
            
            <div class="space-y-4" data-pregunta-form-target="opcionesContainer">
              <% if @pregunta.opciones.any? %>
                <% @pregunta.opciones.each_with_index do |opcion, index| %>
                  <div class="opcion-item mb-3 p-4 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-gray-600 transition-colors panel-hover">
                    <%= f.fields_for :opciones, opcion do |opcion_form| %>
                      <%= opcion_form.hidden_field :id %>
                      <%= opcion_form.hidden_field :orden, value: index + 1 %>
                      
                      <div class="flex items-start">
                        <div class="flex-shrink-0 mr-3">
                          <div class="w-7 h-7 rounded-full bg-indigo-600/50 flex items-center justify-center text-white font-medium">
                            <%= index + 1 %>
                          </div>
                        </div>
                        
                        <div class="flex-grow">
                          <div class="flex items-center">
                            <div class="flex-grow">
                              <% if @pregunta.verdadero_falso? && index == 0 %>
                                <%= opcion_form.hidden_field :contenido, value: "Verdadero" %>
                                <div class="text-sm font-medium text-gray-200 bg-green-600/30 px-3 py-2 rounded-md border border-green-800/30">Verdadero</div>
                              <% elsif @pregunta.verdadero_falso? && index == 1 %>
                                <%= opcion_form.hidden_field :contenido, value: "Falso" %>
                                <div class="text-sm font-medium text-gray-200 bg-red-600/30 px-3 py-2 rounded-md border border-red-800/30">Falso</div>
                              <% else %>
                                <%= opcion_form.text_field :contenido, 
                                    class: "w-full bg-gray-800 border border-gray-700 rounded-md text-gray-200 p-2.5 focus:ring-2 focus:ring-indigo-500 focus:border-transparent",
                                    placeholder: "Texto de la opción #{index + 1}" %>
                              <% end %>
                            </div>
                            
                            <div class="flex-shrink-0 ml-3 flex space-x-2">
                              <label class="p-1.5 rounded-md bg-green-600/30 text-green-400 hover:bg-green-600/50 transition-colors cursor-pointer">
                                <%= opcion_form.radio_button :es_correcta, true, 
                                    class: "sr-only" %>
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                  <path d="M5 13l4 4L19 7"></path>
                                </svg>
                              </label>
                              
                              <% unless @pregunta.verdadero_falso? %>
                                <button type="button" class="p-1.5 rounded-md bg-gray-700 text-gray-400 hover:bg-red-600/20 hover:text-red-400 transition-colors" onclick="eliminarOpcion(this)">
                                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M6 8h8M6 12h8"></path>
                                  </svg>
                                </button>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <% if @pregunta.verdadero_falso? %>
                  <!-- Plantilla para Verdadero/Falso -->
                  <div class="opcion-item p-4 border border-gray-700 rounded-lg bg-gray-900/50">
                    <%= f.fields_for :opciones, @pregunta.opciones.build(orden: 1, contenido: "Verdadero") do |opcion_form| %>
                      <%= opcion_form.hidden_field :orden, value: 1 %>
                      <%= opcion_form.hidden_field :contenido, value: "Verdadero" %>
                      
                      <div class="flex items-center gap-4">
                        <div class="flex-shrink-0 bg-indigo-900/50 border border-indigo-800/50 rounded-full h-8 w-8 flex items-center justify-center text-indigo-300 font-medium">1</div>
                        
                        <div class="flex-grow">
                          <div class="flex items-center">
                            <div class="flex-grow">
                              <div class="text-sm font-medium text-gray-300 bg-green-900/30 px-3 py-2 rounded-lg border border-green-800/30">Verdadero</div>
                            </div>
                            
                            <div class="ml-4">
                              <label class="inline-flex items-center p-2 border rounded-lg transition-colors border-indigo-800/50 bg-indigo-900/10 hover:bg-indigo-900/30 cursor-pointer">
                                <%= opcion_form.radio_button :es_correcta, true, 
                                    class: "rounded-full border-gray-600 bg-gray-800 text-indigo-600 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
                                <span class="ml-2 text-sm text-indigo-300">Correcta</span>
                              </label>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="opcion-item p-4 border border-gray-700 rounded-lg bg-gray-900/50">
                    <%= f.fields_for :opciones, @pregunta.opciones.build(orden: 2, contenido: "Falso") do |opcion_form| %>
