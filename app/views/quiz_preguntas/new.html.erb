<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>
  
  <!-- Contenedor principal con márgenes responsivos -->
  <div class="container mx-auto px-4 pb-16">
    <!-- Migas de pan con mejor contraste -->
    <nav class="py-3 flex items-center text-sm text-white" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 flex-wrap">
        <li>
          <%= link_to "Inicio", root_path, class: "hover:text-indigo-300 transition-colors duration-200" %>
        </li>
        <li class="flex items-center">
          <svg class="h-4 w-4 text-gray-500 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Quizzes", quizzes_path, class: "hover:text-indigo-300 transition-colors duration-200" %>
        </li>
        <li class="flex items-center">
          <svg class="h-4 w-4 text-gray-500 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to @quiz.titulo, quiz_path(@quiz), class: "hover:text-indigo-300 transition-colors duration-200" %>
        </li>
        <li class="flex items-center">
          <svg class="h-4 w-4 text-gray-500 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-indigo-300 font-medium">Nueva Pregunta</span>
        </li>
      </ol>
    </nav>
    
    <!-- Cabecera mejorada - Más limpia y con mejor jerarquía -->
    <header class="bg-gradient-to-r from-gray-800/90 to-gray-900/90 rounded-xl p-5 border border-gray-700/50 shadow-lg mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <!-- Título con indicador de número (mejorado) -->
        <div class="flex items-center">
          <div class="flex items-center justify-center h-11 w-11 bg-indigo-600/30 border border-indigo-500/30 rounded-lg shadow-inner mr-3">
            <span class="text-white font-bold text-lg">#<%= @preguntas_count + 1 %></span>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-white leading-tight">
              Nueva Pregunta
            </h1>
            <p class="text-white text-sm mt-1 font-medium">
              <%= @quiz.titulo %>
            </p>
          </div>
        </div>
        
        <div class="flex flex-wrap items-center gap-3">
          <!-- Indicador de tipo (mejorado) -->
          <div class="inline-flex items-center px-3 py-1.5 rounded-lg bg-indigo-900/40 border border-indigo-700/50 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span class="font-medium"><%= @pregunta.tipo_display %></span>
          </div>
          
          <!-- Botón volver (mejorado) -->
          <%= link_to gestionar_preguntas_quiz_path(@quiz), class: "flex items-center px-3.5 py-1.5 bg-blue-600 hover:bg-blue-500 text-white rounded-lg text-sm font-medium transition-all duration-200 shadow-sm hover:shadow group" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 group-hover:translate-x-[-2px] transition-transform" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            <span>Volver a Preguntas</span>
          <% end %>
        </div>
      </div>
      
      <!-- Barra de progreso mejorada - Integrada en la cabecera -->
      <div class="mt-5 pt-4 border-t border-gray-700/50">
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="text-sm font-medium text-white">Progreso del Formulario</h3>
          </div>
          <span class="text-xs text-white bg-indigo-900/30 px-2 py-1 rounded-full border border-indigo-800/30">2 de 3 pasos</span>
        </div>
        <div class="h-2 bg-gray-700/50 rounded-full overflow-hidden">
          <div class="h-full bg-indigo-600 rounded-full transition-all duration-500" style="width: 66%"></div>
        </div>
        <div class="flex justify-between text-xs text-white mt-1.5">
          <span>Inicio</span>
          <span class="text-white font-medium">Opciones</span>
          <span>Fin</span>
        </div>
      </div>
    </header>
    
    <!-- Botón vista previa eliminado de aquí -->
    
    <!-- Contenido principal con grid mejorado -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <!-- Formulario principal - Área derecha (ahora ocupa más espacio) -->
      <div class="lg:col-span-8 lg:order-2">
        <div class="bg-gray-800/70 rounded-xl border border-gray-700/50 shadow-lg p-6">
          <div class="flex justify-between items-center mb-6 pb-3 border-b border-gray-700/50">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Configuración de la Pregunta
            </h2>
            
            <!-- Botón vista previa integrado en el encabezado -->
            <button type="button" data-pregunta-form-target="previewButton" 
                    class="group flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-white font-medium shadow transition-colors">
              <svg class="w-5 h-5 mr-2 group-hover:animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
              </svg>
              Vista Previa
            </button>
          </div>
          
          <%= render 'form', quiz: @quiz, pregunta: @pregunta %>
          
          <!-- Botones de navegación integrados en el formulario -->
          <div class="flex justify-between mt-8 pt-5 border-t border-gray-700/50">
            <button type="button" class="inline-flex items-center px-5 py-2.5 bg-gray-700 hover:bg-gray-600 rounded-lg text-white font-medium transition-colors shadow hover:shadow-md">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
              </svg>
              Anterior
            </button>
            <button type="button" class="inline-flex items-center px-5 py-2.5 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-white font-medium transition-colors shadow hover:shadow-md">
              Siguiente
              <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Panel lateral izquierdo (ahora más compacto y reorganizado) -->
      <div class="lg:col-span-4 lg:order-1 space-y-5">
        <!-- Información del tipo de pregunta (mejorada) -->
        <div class="bg-gradient-to-b from-indigo-900/20 to-indigo-900/5 rounded-xl border border-indigo-800/30 shadow-lg overflow-hidden">
          <div class="p-4 bg-indigo-900/30 border-b border-indigo-800/30">
            <div class="flex items-center">
              <% 
                tipo_icon = case @pregunta.tipo 
                  when 'opcion_multiple'
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
                  when 'verdadero_falso'
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" /></svg>'
                  when 'respuesta_corta'
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>'
                  when 'emparejamiento'
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" /></svg>'
                  when 'multiple_respuesta'
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>'
                  else
                    '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
                end
              %>
              <%= raw tipo_icon %>
              <h3 class="text-white font-semibold">Tipo: <%= @pregunta.tipo_display %></h3>
            </div>
          </div>
          
          <div class="p-4 space-y-4">
            <!-- Consejos específicos según tipo -->
            <div class="space-y-3">
              <h4 class="text-white font-medium flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Consejos para este tipo
              </h4>
              
              <ul class="space-y-2.5 bg-indigo-900/20 p-3 rounded-lg border border-indigo-800/30">
                <% if @pregunta.opcion_multiple? %>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Asegúrate de que una y solo una opción sea correcta</span>
                  </li>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Evita opciones obvias que se puedan descartar fácilmente</span>
                  </li>
                <% elsif @pregunta.verdadero_falso? %>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Formula la pregunta de forma clara y sin ambigüedades</span>
                  </li>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Evita usar palabras como "siempre" o "nunca" que den pistas</span>
                  </li>
                <% elsif @pregunta.multiple_respuesta? %>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Indica claramente que se deben seleccionar múltiples opciones</span>
                  </li>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Asegúrate de que más de una opción sea correcta</span>
                  </li>
                <% elsif @pregunta.respuesta_corta? %>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Solicita respuestas concisas y específicas</span>
                  </li>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Considera posibles variaciones en la respuesta</span>
                  </li>
                <% elsif @pregunta.emparejamiento? %>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Crea pares claros sin ambigüedades</span>
                  </li>
                  <li class="flex items-start text-sm text-white">
                    <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                    <span>Utiliza términos y definiciones relacionados con el mismo tema</span>
                  </li>
                <% end %>
                <li class="flex items-start text-sm text-white">
                  <span class="inline-flex items-center justify-center h-5 w-5 bg-indigo-900/60 rounded-full text-white text-xs mr-2 flex-shrink-0 mt-0.5">✓</span>
                  <span>Añade retroalimentación para mejorar el aprendizaje</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        
        <!-- Acordeón de información y ayuda -->
        <div class="bg-gray-800/70 rounded-xl border border-gray-700/50 shadow-lg overflow-hidden">
          <!-- Estadísticas -->
          <details class="group" open>
            <summary class="flex items-center justify-between p-4 bg-gray-800/90 cursor-pointer border-b border-gray-700/50 text-white hover:bg-gray-700/90 transition-colors">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                <h3 class="font-medium">Estadísticas del Quiz</h3>
              </div>
              <svg class="w-5 h-5 transition-transform group-open:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </summary>
            <div class="p-4 space-y-3 bg-gray-900/30">
              <div class="flex justify-between items-center p-3 rounded-lg bg-gray-800/80 border border-gray-700/50 hover:bg-gray-800 transition-colors">
                <span class="text-white text-sm flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Preguntas:
                </span>
                <span class="px-2.5 py-1 bg-indigo-900/40 border border-indigo-800/30 rounded text-white font-medium text-sm"><%= @preguntas_count %></span>
              </div>
              <div class="flex justify-between items-center p-3 rounded-lg bg-gray-800/80 border border-gray-700/50 hover:bg-gray-800 transition-colors">
                <span class="text-white text-sm flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                  Puntaje total:
                </span>
                <span class="px-2.5 py-1 bg-green-900/30 border border-green-800/30 rounded text-white font-medium text-sm"><%= @puntaje_total %></span>
              </div>
              <div class="flex justify-between items-center p-3 rounded-lg bg-gray-800/80 border border-gray-700/50 hover:bg-gray-800 transition-colors">
                <span class="text-white text-sm flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  Tipos usados:
                </span>
                <span class="px-2.5 py-1 bg-blue-900/30 border border-blue-800/30 rounded text-white font-medium text-sm"><%= @tipos_preguntas %></span>
              </div>
            </div>
          </details>
          
          <!-- Ayuda Rápida -->
          <details class="group">
            <summary class="flex items-center justify-between p-4 bg-gray-800/90 cursor-pointer border-b border-gray-700/50 text-white hover:bg-gray-700/90 transition-colors">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="font-medium">Ayuda Rápida</h3>
              </div>
              <svg class="w-5 h-5 transition-transform group-open:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </summary>
