<!-- app/views/laboratorios/_laboratorio_activo.html.erb -->
<div class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-semibold"><%= laboratorio_activo.laboratorio.nombre %></h3>
    <span class="px-3 py-1 rounded-full text-sm
                 <%= status_color(laboratorio_activo.status) %>">
      <%= laboratorio_activo.status %>
    </span>
  </div>
  
  <div class="mb-4">
    <div class="h-2 bg-gray-200 rounded">
      <div class="h-full bg-blue-500 rounded" 
           style="width: <%= laboratorio_activo.progreso %>%">
      </div>
    </div>
  </div>
  
  <%= link_to "Continuar", 
              sesion_laboratorio_path(laboratorio_activo), 
              class: "w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>