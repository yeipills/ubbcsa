<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumbs -->
    <nav class="flex items-center text-sm text-gray-400 mb-6">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to "Inicio", root_path, class: "hover:text-white" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Laboratorios", laboratorios_path, class: "hover:text-white" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-white font-medium">
            <%= @laboratorio.new_record? ? 'Nuevo Laboratorio' : 'Editar Laboratorio' %>
          </span>
        </li>
      </ol>
    </nav>

    <div class="bg-gray-800/90 backdrop-blur-sm rounded-lg shadow-lg border border-gray-700 overflow-hidden">
      <div class="p-6">
        <header class="mb-6 flex items-center">
          <% if @laboratorio.persisted? %>
            <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% else %>
            <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          <% end %>
          <h1 class="text-2xl font-bold text-white">
            <%= @laboratorio.new_record? ? 'Crear Nuevo Laboratorio' : 'Editar Laboratorio' %>
          </h1>
        </header>

        <!-- Formulario con mejor estilo -->
        <%= render 'form', curso: @curso, laboratorio: @laboratorio %>
      </div>
    </div>
  </div>
</div>