<!-- app/views/laboratorios/new.html.erb -->
<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumbs -->
    <nav class="flex items-center text-sm text-gray-400 mb-6">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to "Inicio", root_path, class: "hover:text-white" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Laboratorios", laboratorios_path, class: "hover:text-white" %>
        </li>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-white font-medium">
            <%= @laboratorio.new_record? ? 'Nuevo Laboratorio' : 'Editar Laboratorio' %>
          </span>
        </li>
      </ol>
    </nav>

    <div class="bg-gray-800 rounded-lg shadow-lg border border-gray-700 overflow-hidden">
      <div class="p-6">
        <header class="mb-6 flex items-center">
          <% if @laboratorio.persisted? %>
            <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% else %>
            <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          <% end %>
          <h1 class="text-2xl font-bold text-white">
            <%= @laboratorio.new_record? ? 'Crear Nuevo Laboratorio' : 'Editar Laboratorio' %>
          </h1>
        </header>

        <!-- Formulario con mejor estilo -->
        <%= form_with(model: [@curso, @laboratorio], local: true, class: "space-y-6") do |f| %>
          <% if @laboratorio.errors.any? %>
            <div class="bg-red-900/30 p-4 rounded-lg border border-red-800/50 mb-6">
              <h2 class="text-red-300 font-medium mb-2 text-sm">
                <%= pluralize(@laboratorio.errors.count, "error") %> impidieron guardar este laboratorio:
              </h2>
              <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
                <% @laboratorio.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Sección de Información Básica -->
          <fieldset class="p-4 bg-gray-900 rounded-lg border border-gray-700">
            <legend class="px-2 text-sm font-medium text-gray-300">Información básica</legend>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :nombre, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_field :nombre, 
                    class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
              </div>

              <div>
                <%= f.label :tipo, class: "block text-sm font-medium text-gray-300" %>
                <%= f.select :tipo, 
                    ['pentesting', 'forense', 'redes'], 
                    {}, 
                    class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
              </div>
            </div>
          </fieldset>

          <!-- Contenido y Configuración -->
          <fieldset class="p-4 bg-gray-900 rounded-lg border border-gray-700">
            <legend class="px-2 text-sm font-medium text-gray-300">Contenido y configuración</legend>
            
            <div class="space-y-4">
              <div>
                <%= f.label :descripcion, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_area :descripcion, rows: 4,
                    class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <%= f.label :duracion_estimada, "Duración estimada (minutos)", class: "block text-sm font-medium text-gray-300" %>
                  <%= f.number_field :duracion_estimada,
                      class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
                </div>

                <div>
                  <%= f.label :nivel_dificultad, class: "block text-sm font-medium text-gray-300" %>
                  <%= f.select :nivel_dificultad,
                      ['principiante', 'intermedio', 'avanzado'],
                      {},
                      class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
                </div>
              </div>
            </div>
          </fieldset>

          <!-- Objetivos y Requisitos -->
          <fieldset class="p-4 bg-gray-900 rounded-lg border border-gray-700">
            <legend class="px-2 text-sm font-medium text-gray-300">Objetivos y requisitos</legend>
            
            <div class="grid grid-cols-1 gap-6">
              <div>
                <%= f.label :objetivos, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_area :objetivos, rows: 4,
                    class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500",
                    placeholder: "Escribe los objetivos que deben conseguir los alumnos..." %>
              </div>

              <div>
                <%= f.label :requisitos, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_area :requisitos, rows: 4,
                    class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500",
                    placeholder: "Requisitos para realizar el laboratorio..." %>
              </div>
            </div>
          </fieldset>

          <!-- Configuración adicional -->
          <fieldset class="p-4 bg-gray-900 rounded-lg border border-gray-700">
            <legend class="px-2 text-sm font-medium text-gray-300">Configuración adicional</legend>
            
            <div class="space-y-4">
              <div class="flex items-center space-x-2">
                <%= f.check_box :activo, 
                    class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-blue-600 focus:ring-blue-500" %>
                <%= f.label :activo, "Laboratorio activo y visible para los estudiantes", 
                    class: "text-sm text-gray-300" %>
              </div>
            </div>
          </fieldset>

          <!-- Botones de Acción -->
          <div class="flex flex-col sm:flex-row justify-end gap-3 pt-4 border-t border-gray-700">
            <%= link_to "Cancelar", 
                @curso.present? ? curso_path(@curso) : laboratorios_path,
                class: "px-4 py-2 text-sm font-medium text-gray-300 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors duration-200 text-center" %>
            
            <%= f.submit @laboratorio.new_record? ? "Crear Laboratorio" : "Actualizar Laboratorio",
                class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>