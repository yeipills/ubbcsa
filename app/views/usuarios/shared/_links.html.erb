<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", new_session_path(resource_name), 
        class: "block text-center text-sm text-blue-400 hover:text-blue-500" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "¿No tienes cuenta? Regístrate", new_registration_path(resource_name), 
        class: "block text-center text-sm text-blue-400 hover:text-blue-500" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), 
        class: "block text-center text-sm text-blue-400 hover:text-blue-500" %>
  <% end %>
</div>