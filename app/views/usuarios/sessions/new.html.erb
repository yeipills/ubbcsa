<%# app/views/devise/sessions/new.html.erb %>
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full mx-auto space-y-8">
    <%# Logo Header %>
    <div class="text-center">
      <%= link_to root_path, class: "inline-block" do %>
        <div class="flex items-center justify-center h-12 w-12  rounded-xl mx-auto">
        </div>
        <h2 class="mt-4 text-3xl font-extrabold text-white">
          Bienvenido a UBB CSA
        </h2>
      <% end %> 
      <p class="mt-2 text-sm text-gray-400">
        Ingresa tus credenciales para continuar
      </p>
    </div>

    <%# Login Form %>
    <div class="bg-gray-800/30 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-700/50 p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
          html: { class: "space-y-6" }) do |f| %>
        
        <%# Email Field %>
        <div>
          <%= f.label :email, "Correo electrónico", 
              class: "block text-sm font-medium text-gray-300 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "block w-full pl-10 pr-3 py-2.5 border border-gray-600 
                       rounded-xl shadow-sm placeholder-gray-500
                       bg-gray-900/50 text-white 
                       focus:ring-2 focus:ring-blue-500 focus:border-transparent
                       text-sm",
                placeholder: "nombre@ubiobio.cl" %>
          </div>
        </div>

        <%# Password Field %>
        <div>
          <%= f.label :password, "Contraseña", 
              class: "block text-sm font-medium text-gray-300 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "block w-full pl-10 pr-3 py-2.5 border border-gray-600 
                       rounded-xl shadow-sm placeholder-gray-500
                       bg-gray-900/50 text-white 
                       focus:ring-2 focus:ring-blue-500 focus:border-transparent
                       text-sm",
                placeholder: "••••••••" %>
          </div>
        </div>

        <%# Remember Me %>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, 
                  class: "h-4 w-4 text-blue-600 bg-gray-900 border-gray-600 
                         rounded focus:ring-blue-500 focus:ring-offset-gray-800" %>
              <%= f.label :remember_me, "Recordarme", 
                  class: "ml-2 block text-sm text-gray-300" %>
            </div>
            <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), 
                class: "text-sm font-medium text-blue-400 hover:text-blue-300" %>
          </div>
        <% end %>

        <%# Submit Button %>
        <%= f.submit "Iniciar sesión",
            class: "w-full flex justify-center py-2.5 px-4 mt-6
                   border border-transparent rounded-xl shadow-sm 
                   text-sm font-medium text-white bg-blue-600 hover:bg-blue-500
                   focus:outline-none focus:ring-2 focus:ring-offset-2 
                   focus:ring-offset-gray-800 focus:ring-blue-500
                   transition duration-200" %>
      <% end %>

      <%# Additional Links %>
      <div class="mt-6 text-center text-sm">
        <span class="text-gray-400">¿No tienes una cuenta?</span>
        <%= link_to "Regístrate", new_registration_path(resource_name), 
            class: "ml-1 font-medium text-blue-400 hover:text-blue-300" %>
      </div>
    </div>
  </div>
</div>