<div class="bg-gray-800 rounded-lg p-6 shadow-lg">
  <div class="flex items-center">
    <div class="p-3 rounded-full bg-<%= color_class %>-900 text-<%= color_class %>-400">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_class %>"/>
      </svg>
    </div>
    <div class="ml-4">
      <h3 class="text-lg font-semibold text-gray-300"><%= title %></h3>
      <p class="text-2xl font-bold text-<%= color_class %>-400"><%= value %></p>
    </div>
  </div>
</div>