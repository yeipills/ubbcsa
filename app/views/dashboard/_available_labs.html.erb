<div class="bg-gray-800 rounded-lg p-6 shadow-lg border border-gray-700">
  <h2 class="text-xl font-bold text-white mb-4">Laboratorios Disponibles</h2>
  <% if laboratorios_disponibles&.any? %>
    <div class="space-y-4">
      <% laboratorios_disponibles.each do |lab| %>
        <div class="bg-gray-900 rounded-lg p-4 hover:bg-gray-700 transition-colors duration-200">
          <h3 class="font-medium text-white"><%= lab.nombre %></h3>
          <p class="text-sm text-gray-400 mb-4"><%= truncate(lab.descripcion, length: 100) %></p>
          <div class="flex justify-between items-center">
            <span class="px-2 py-1 text-xs rounded-full
                    <%= lab.nivel_dificultad == 'principiante' ? 'bg-green-900 text-green-300' : 
                      lab.nivel_dificultad == 'intermedio' ? 'bg-yellow-900 text-yellow-300' : 
                      'bg-red-900 text-red-300' %>">
              <%= lab.nivel_dificultad.capitalize %>
            </span>
            <%= link_to "Comenzar â†’", laboratorio_path(lab), 
                class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-400">No hay laboratorios disponibles</p>
  <% end %>
</div>