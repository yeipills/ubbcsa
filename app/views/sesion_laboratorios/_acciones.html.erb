<div class="bg-gray-800 rounded-lg p-6">
  <h3 class="text-xl font-bold text-white mb-4">Acciones</h3>
  
  <div class="space-y-3">
    <%= button_to 'Reiniciar Terminal', 
        reset_sesion_laboratorio_path(@sesion), 
        method: :post,
        class: 'w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition duration-200',
        data: { confirm: '¿Estás seguro?' } %>
    
    <%= button_to 'Finalizar Sesión', 
        sesion_laboratorio_path(@sesion), 
        method: :patch,
        params: { sesion_laboratorio: { estado: 'completada' } },
        class: 'w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition duration-200',
        data: { confirm: '¿Estás seguro?' } %>
  </div>
</div>