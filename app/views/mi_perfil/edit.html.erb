<!-- app/views/mi_perfil/edit.html.erb -->
<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <nav class="flex items-center text-sm text-gray-400" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <%= link_to "Inicio", root_path, class: "hover:text-white" %>
          </li>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to "Mi Perfil", mi_perfil_path, class: "hover:text-white" %>
          </li>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-white">Editar</span>
          </li>
        </ol>
      </nav>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg border border-gray-700">
      <div class="p-6">
        <div class="flex items-center mb-6">
          <svg class="w-6 h-6 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          <h1 class="text-2xl font-bold text-white">Editar Perfil</h1>
        </div>

        <%= form_with(model: @usuario, url: mi_perfil_path, method: :patch, class: "space-y-6") do |f| %>
          <% if @usuario.errors.any? %>
            <div class="bg-red-900/30 p-4 rounded-lg border border-red-800/50 mb-6">
              <h2 class="text-red-300 font-medium mb-2 text-sm">
                <%= pluralize(@usuario.errors.count, "error") %> impidieron guardar los cambios:
              </h2>
              <ul class="list-disc list-inside text-red-300 text-sm space-y-1">
                <% @usuario.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="space-y-4">
            <div>
              <%= f.label :nombre_completo, "Nombre Completo", class: "block text-sm font-medium text-gray-300" %>
              <%= f.text_field :nombre_completo, 
                  class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 placeholder-gray-500" %>
            </div>

            <div>
              <%= f.label :nombre_usuario, "Nombre de Usuario", class: "block text-sm font-medium text-gray-300" %>
              <%= f.text_field :nombre_usuario, 
                  class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 placeholder-gray-500" %>
            </div>

            <div>
              <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-300" %>
              <%= f.email_field :email, 
                  class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 placeholder-gray-500" %>
            </div>
          </div>

          <div class="flex justify-between pt-4 mt-8 border-t border-gray-700">
            <%= link_to "Cancelar", mi_perfil_path, 
                class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg text-sm font-medium transition-colors duration-200" %>
            
            <%= f.submit "Guardar Cambios", 
                class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors duration-200" %>
          </div>
        <% end %>

        <div class="mt-8 pt-6 border-t border-gray-700">
          <h2 class="text-lg font-medium text-white mb-4">Cambiar Contraseña</h2>
          <p class="text-gray-400 mb-4">Para cambiar tu contraseña, dirígete a la sección de configuración de cuenta.</p>
          
          <%= link_to edit_usuario_registration_path, 
              class: "inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg text-sm font-medium transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            Cambiar Contraseña
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>