<%= form_with(model: [@pregunta, @opcion], local: true, class: "space-y-6") do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :contenido, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :contenido, class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>

    <div class="flex items-center">
      <%= f.label :es_correcta, class: "ml-2 block text-sm text-gray-700" %>
      <%= f.check_box :es_correcta, class: "h-4 w-4 text-blue-600 rounded border-gray-300" %>
    </div>

    <div>
      <%= f.label :orden, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :orden, min: 1, 
          class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancelar', quiz_pregunta_path(@pregunta), 
        class: "px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>