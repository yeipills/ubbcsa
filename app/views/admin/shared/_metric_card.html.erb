<div class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-start mb-4">
    <div class="text-gray-600"><%= title %></div>
    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
      <i class="<%= icon %> text-blue-500"></i>
    </div>
  </div>
  
  <div class="flex items-end justify-between">
    <div class="text-2xl font-bold"><%= value %></div>
    <div class="flex items-center text-sm">
      <span class="<%= trend.positive? ? 'text-green-500' : 'text-red-500' %>">
        <i class="fas fa-<%= trend.positive? ? 'arrow-up' : 'arrow-down' %>"></i>
        <%= number_to_percentage(trend.value, precision: 1) %>
      </span>
    </div>
  </div>
</div>