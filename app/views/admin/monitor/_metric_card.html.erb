<!-- app/views/admin/monitor/_metric_card.html.erb -->
<div class="bg-gray-800 rounded-lg p-6">
  <div class="flex justify-between items-start mb-2">
    <span class="text-gray-400"><%= title %></span>
    <span class="<%= color %> text-2xl font-bold">
      <%= value %><%= unit %>
    </span>
  </div>
  <div class="flex items-center space-x-2">
    <i class="fas fa-<%= trend.positive? ? 'arrow-up text-green-500' : 'arrow-down text-red-500' %>"></i>
    <span class="text-sm <%= trend.positive? ? 'text-green-500' : 'text-red-500' %>">
      <%= number_to_percentage(trend.value, precision: 1) %>
    </span>
  </div>
</div>