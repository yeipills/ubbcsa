<!-- app/views/admin/laboratorios/_laboratorio.html.erb -->
<tr>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="flex-shrink-0 h-10 w-10">
        <div class="h-10 w-10 rounded-full bg-gray-100 flex items-center justify-center">
          <i class="<%= laboratorio_icon(laboratorio.categoria) %> text-gray-500"></i>
        </div>
      </div>
      <div class="ml-4">
        <div class="text-sm font-medium text-gray-900">
          <%= laboratorio.nombre %>
        </div>
        <div class="text-sm text-gray-500">
          <%= truncate(laboratorio.descripcion, length: 50) %>
        </div>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
      <%= laboratorio.categoria %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                 <%= laboratorio.activo? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= laboratorio.activo? ? 'Activo' : 'Inactivo' %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= laboratorio.sesion_laboratorios.active.count %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= time_ago_in_words(laboratorio.updated_at) %> atrás
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex justify-end space-x-2">
      <%= link_to admin_laboratorio_path(laboratorio), 
          class: "text-blue-600 hover:text-blue-900" do %>
        <i class="fas fa-eye"></i>
      <% end %>
      
      <%= link_to edit_admin_laboratorio_path(laboratorio), 
          class: "text-yellow-600 hover:text-yellow-900" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      
      <%= button_to admin_laboratorio_path(laboratorio), 
          method: :delete,
          class: "text-red-600 hover:text-red-900",
          data: { confirm: "¿Estás seguro?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>