<!-- app/views/admin/laboratorios/new.html.erb -->
<div class="min-h-screen bg-gray-100">
  <%= render 'admin/shared/sidebar' %>

  <div class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold">
        <%= @laboratorio.new_record? ? 'Nuevo Laboratorio' : 'Editar Laboratorio' %>
      </h1>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <%= form_with model: [:admin, @laboratorio], class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :nombre, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :nombre, 
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :categoria, class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :categoria, 
                Laboratorio.categorias.keys,
                {},
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div class="md:col-span-2">
            <%= f.label :descripcion, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :descripcion, 
                rows: 4,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :duracion_estimada, class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :duracion_estimada,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :dificultad, class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :dificultad,
                ['Principiante', 'Intermedio', 'Avanzado'],
                {},
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        </div>

        <div class="flex justify-end gap-4">
          <%= link_to "Cancelar", 
              admin_laboratorios_path,
              class: "px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-50" %>
          
          <%= f.submit @laboratorio.new_record? ? "Crear Laboratorio" : "Actualizar Laboratorio",
              class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>