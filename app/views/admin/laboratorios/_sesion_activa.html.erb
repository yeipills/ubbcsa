<!-- app/views/admin/laboratorios/_sesion_activa.html.erb -->
<div class="flex items-center justify-between p-4 border rounded-lg">
  <div class="flex items-center space-x-4">
    <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
      <i class="fas fa-user text-gray-600"></i>
    </div>
    <div>
      <h3 class="font-medium"><%= sesion_activa.usuario.nombre_completo %></h3>
      <p class="text-sm text-gray-600">
        Iniciado hace <%= time_ago_in_words(sesion_activa.created_at) %>
      </p>
    </div>
  </div>
  
  <div class="flex items-center space-x-4">
    <div class="text-sm text-gray-600">
      <%= number_to_percentage(sesion_activa.progreso, precision: 0) %>
    </div>
    
    <%= button_to finalizar_admin_laboratorio_sesion_path(@laboratorio, sesion_activa),
        method: :post,
        class: "text-red-600 hover:text-red-900",
        data: { confirm: "¿Finalizar esta sesión?" } do %>
      <i class="fas fa-times"></i>
    <% end %>
  </div>
</div>