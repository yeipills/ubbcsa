<%= form_with(model: @quiz, local: true, class: "space-y-6") do |f| %>
  <% if @quiz.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <div class="text-red-700 font-medium mb-2">
        <%= pluralize(@quiz.errors.count, "error") %> impidieron guardar este quiz:
      </div>
      <ul class="list-disc list-inside text-red-600">
        <% @quiz.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= f.label :titulo, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :titulo, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.label :descripcion, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :descripcion, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :curso_id, class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :curso_id, @cursos, :id, :nombre, 
            {}, class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div>
        <%= f.label :laboratorio_id, class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :laboratorio_id, 
            @quiz.curso&.laboratorios || [], :id, :nombre,
            {}, class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :tiempo_limite, "Tiempo lÃ­mite (minutos)", 
            class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :tiempo_limite, min: 1,
            class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div>
        <%= f.label :intentos_permitidos, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :intentos_permitidos, min: 1,
            class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :fecha_inicio, class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :fecha_inicio,
            class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div>
        <%= f.label :fecha_fin, class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :fecha_fin,
            class: "mt-1 block w-full rounded-md border-gray-300" %>
      </div>
    </div>

    <div>
      <%= f.label :estado, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :estado, Quiz.estados.keys.map { |estado| 
          [estado.humanize, estado] 
        }, {}, class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancelar', quizzes_path, 
        class: "px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>