<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
      <nav class="flex items-center text-sm text-gray-400">
        <ol class="flex items-center space-x-2">
          <li>
            <%= link_to "Inicio", root_path, class: "hover:text-white" %>
          </li>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to "Quizzes", quizzes_path, class: "hover:text-white" %>
          </li>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to @quiz.titulo, quiz_path(@quiz), class: "hover:text-white" %>
          </li>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-white">Gestionar Preguntas</span>
          </li>
        </ol>
      </nav>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg p-6 sm:p-8 mb-8">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <h1 class="text-2xl font-bold text-white">Gestionar Preguntas: <%= @quiz.titulo %></h1>
        <div class="flex items-center gap-3">
          <span class="px-3 py-1 rounded-full text-sm font-medium <%= estado_quiz_badge(@quiz.estado) %>">
            <%= @quiz.estado.titleize %>
          </span>
          <%= link_to quiz_path(@quiz), class: "text-blue-400 hover:text-blue-300 flex items-center" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 mr-1">
              <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z" clip-rule="evenodd" />
            </svg>
            Volver al Quiz
          <% end %>
        </div>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
          <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <div class="flex justify-between items-center mb-4">
              <h2 class="text-xl font-medium text-white">Lista de Preguntas</h2>
              <div class="text-sm text-gray-400">Total: <%= @preguntas.count %></div>
            </div>
            
            <% if @preguntas.any? %>
              <div id="lista-preguntas" class="space-y-4" data-controller="quiz-pregunta-sorter">
                <% @preguntas.each do |pregunta| %>
                  <div class="sortable-item" data-id="<%= pregunta.id %>">
                    <%= render 'quiz_preguntas/pregunta_card', pregunta: pregunta, quiz: @quiz %>
                  </div>
                <% end %>
              </div>
              <div class="text-right mt-4">
                <button id="guardar-orden" class="hidden px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors">
                  Guardar nuevo orden
                </button>
              </div>
            <% else %>
              <div class="text-center py-12 px-4">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-800 mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-white">No hay preguntas</h3>
                <p class="mt-2 text-gray-400">Usa el formulario para agregar preguntas a este quiz.</p>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="lg:col-span-1">
          <div id="form-pregunta-rapida" class="bg-gray-900 p-4 rounded-lg border border-gray-700 sticky top-4">
            <%= render 'form_pregunta_rapida', quiz: @quiz, pregunta: @nueva_pregunta, tipos_pregunta: @tipos_pregunta %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Inicializar Sortable.js si existe la librería
  if (typeof Sortable !== 'undefined') {
    const container = document.getElementById('lista-preguntas');
    if (container) {
      const sortable = new Sortable(container, {
        animation: 150,
        handle: '.sortable-item',
        ghostClass: 'sortable-ghost',
        chosenClass: 'sortable-chosen',
        dragClass: 'sortable-drag',
        onEnd: function() {
          document.getElementById('guardar-orden').classList.remove('hidden');
        }
      });
      
      // Guardar orden al hacer clic en el botón
      document.getElementById('guardar-orden').addEventListener('click', function() {
        const items = container.querySelectorAll('.sortable-item');
        const orden = {};
        
        items.forEach((item, index) => {
          orden[item.dataset.id] = index + 1;
        });
        
        // Enviar orden al servidor
        fetch('<%= reordenar_preguntas_quiz_path(@quiz) %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          },
          body: JSON.stringify({ orden: orden })
        })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            document.getElementById('guardar-orden').classList.add('hidden');
            // Opcional: Mostrar mensaje de éxito
            const flashContainer = document.getElementById('flash-container');
            if (flashContainer) {
              flashContainer.innerHTML = `
                <div class="bg-green-800 text-green-100 px-4 py-3 rounded relative mb-4" role="alert">
                  <span class="block sm:inline">Orden actualizado correctamente.</span>
                  <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                    <svg class="fill-current h-6 w-6 text-green-100" role="button" onclick="this.parentElement.parentElement.remove();" viewBox="0 0 20 20">
                      <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
                    </svg>
                  </span>
                </div>
              `;
            }
          }
        })
        .catch(error => {
          console.error('Error:', error);
        });
      });
    }
  }
});
</script>