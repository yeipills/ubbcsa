<div class="min-h-screen bg-gray-900">
  <% content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 sm:p-8">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-white"><%= @quiz.titulo %></h1>
          <p class="text-gray-400 mt-2 text-sm sm:text-base"><%= @quiz.descripcion %></p>
        </div>
        <span class="px-3 py-1 rounded-full text-sm font-medium <%= estado_quiz_badge(@quiz.estado) %>">
          <%= @quiz.estado.titleize %>
        </span>
      </div>

      <!-- üîπ Grid de Detalles -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
        <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
          <h3 class="font-medium text-gray-300">Detalles</h3>
          <dl class="mt-2 space-y-2">
            <div class="flex justify-between">
              <dt class="text-gray-400">Tiempo l√≠mite:</dt>
              <dd class="text-white"><%= @quiz.tiempo_limite %> minutos</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-400">Intentos permitidos:</dt>
              <dd class="text-white"><%= @quiz.intentos_permitidos %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-400">Disponible desde:</dt>
              <dd class="text-white"><%= l @quiz.fecha_inicio, format: :short %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-400">Hasta:</dt>
              <dd class="text-white"><%= l @quiz.fecha_fin, format: :short %></dd>
            </div>
          </dl>
        </div>

        <% if current_usuario.profesor? %>
          <div class="bg-gray-900 p-4 rounded-lg border border-gray-700">
            <h3 class="font-medium text-gray-300">Estad√≠sticas</h3>
            <dl class="mt-2 space-y-2">
              <div class="flex justify-between">
                <dt class="text-gray-400">Total de intentos:</dt>
                <dd class="text-white"><%= @quiz.intentos.count %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-400">Promedio de puntaje:</dt>
                <dd class="text-white"><%= number_to_percentage(@quiz.intentos.average(:puntaje_total), precision: 1) %></dd>
              </div>
            </dl>
          </div>
        <% end %>
      </div>

      <% if current_usuario.profesor? %>
        <!-- üîπ Preguntas -->
        <div class="mb-8">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-white">Preguntas</h2>
            <%= link_to 'Agregar Pregunta', new_quiz_pregunta_path(@quiz), 
                class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
          </div>
          <div class="space-y-4">
            <%= render partial: 'quiz_preguntas/pregunta', collection: @preguntas %>
          </div>
        </div>

        <!-- üîπ Botones de Acciones -->
        <div class="flex justify-end space-x-4">
          <%= link_to 'Editar Quiz', edit_quiz_path(@quiz), 
              class: "bg-gray-700 text-gray-300 px-4 py-2 rounded-md hover:bg-gray-600 hover:scale-105 transition duration-200" %>
          <%= button_to 'Eliminar Quiz', quiz_path(@quiz), 
              method: :delete, 
              class: "bg-red-700 text-white px-4 py-2 rounded-md hover:bg-red-600 hover:scale-105 transition duration-200",
              data: { confirm: '¬øEst√°s seguro?' } %>
        </div>

      <% else %>
        <!-- üîπ Iniciar o Continuar Quiz -->
        <% if @quiz.publicado? %>
          <% if @intento.new_record? %>
            <%= button_to 'Iniciar Quiz', quiz_intentos_path(@quiz), 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-medium transition duration-200 hover:scale-105" %>
          <% else %>
            <%= link_to 'Continuar Quiz', quiz_intento_path(@quiz, @intento), 
                class: "w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-medium transition duration-200 text-center hover:scale-105" %>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
