<%# app/views/quizzes/show.html.erb %>
<div class="min-h-screen bg-gray-900">
  <%= content_for :navbar do %>
    <%= render 'shared/navbar' %>
  <% end %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumbs y Acciones mejorados con animaciones -->
    <div class="mb-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
              <li class="inline-flex items-center">
                <%= link_to dashboard_path, class: "inline-flex items-center text-sm font-medium text-gray-400 hover:text-blue-400 transition-colors" do %>
                  <svg class="mr-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                  </svg>
                  Inicio
                <% end %>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <%= link_to quizzes_path, class: "ml-1 text-sm font-medium text-gray-400 hover:text-blue-400 md:ml-2 transition-colors" do %>
                    Quizzes
                  <% end %>
                </div>
              </li>
              <li aria-current="page">
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="ml-1 text-sm font-medium text-gray-300 md:ml-2 truncate max-w-[150px] sm:max-w-xs">
                    <%= @quiz.titulo %>
                  </span>
                </div>
              </li>
            </ol>
          </nav>
        </div>

        <% if current_usuario.profesor? || current_usuario.admin? %>
          <div class="flex flex-wrap gap-2 self-end">
            <%= link_to edit_quiz_path(@quiz), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gray-700 text-white hover:bg-gray-600 transition-colors duration-200 shadow-md hover:shadow-lg" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              Editar Quiz
            <% end %>
            
            <% if @quiz.borrador? %>
              <%= button_to publicar_quiz_path(@quiz), method: :post, 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white transition-colors duration-200 shadow-md hover:shadow-lg", 
                  form: { 
                    data: { 
                      turbo_confirm: "¿Estás seguro? El quiz será visible para los estudiantes según las fechas configuradas.",
                      controller: "confirm-dialog"
                    } 
                  } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Publicar
              <% end %>
            <% elsif @quiz.publicado? %>
              <%= button_to despublicar_quiz_path(@quiz), method: :post, 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-amber-600 to-amber-700 hover:from-amber-700 hover:to-amber-800 text-white transition-colors duration-200 shadow-md hover:shadow-lg", 
                  form: { 
                    data: { 
                      turbo_confirm: "¿Estás seguro? El quiz dejará de estar visible para los estudiantes.",
                      controller: "confirm-dialog"
                    } 
                  } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd" />
                </svg>
                Despublicar
              <% end %>
            <% end %>

            <!-- Menú desplegable con animación -->
            <div class="relative" x-data="{ open: false }">
              <button @click="open = !open" type="button" 
                  class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-indigo-700 text-white hover:bg-indigo-600 transition-colors duration-200 shadow-md hover:shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                </svg>
                Acciones
              </button>
              <div x-show="open" 
                  @click.away="open = false" 
                  x-transition:enter="transition ease-out duration-200"
                  x-transition:enter-start="opacity-0 transform scale-95"
                  x-transition:enter-end="opacity-100 transform scale-100"
                  x-transition:leave="transition ease-in duration-150"
                  x-transition:leave-start="opacity-100 transform scale-100"
                  x-transition:leave-end="opacity-0 transform scale-95"
                  class="absolute right-0 mt-2 w-48 bg-gray-800 rounded-lg border border-gray-700 shadow-xl z-10 py-1">
                <%= link_to estadisticas_quiz_path(@quiz), 
                    class: "flex items-center px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition-colors" do %>
                  <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                  Estadísticas
                <% end %>
                
                <%= link_to gestionar_preguntas_quiz_path(@quiz), 
                    class: "flex items-center px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition-colors" do %>
                  <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Gestionar Preguntas
                <% end %>
                
                <%= link_to duplicate_quiz_path(@quiz), 
                    class: "flex items-center px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition-colors", 
                    data: { turbo_method: :post } do %>
                  <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  Duplicar Quiz
                <% end %>
                
                <% if @quiz.preguntas.any? %>
                  <%= link_to exportar_resultados_quiz_path(@quiz, formato: :csv), 
                      class: "flex items-center px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white transition-colors" do %>
                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    Exportar Resultados
                  <% end %>
                <% end %>
                
                <div class="border-t border-gray-700 my-1"></div>
                
                <%= button_to quiz_path(@quiz), method: :delete, 
                    form: { 
                      data: { 
                        turbo_confirm: "¿Estás seguro de eliminar este quiz y todos sus datos asociados? Esta acción no se puede deshacer.",
                        controller: "confirm-dialog", 
                        confirm_dialog_title_value: "Eliminar Quiz",
                        confirm_dialog_message_value: "Esta acción eliminará permanentemente el quiz y todos los intentos asociados."
                      } 
                    }, 
                    class: "w-full text-left flex items-center px-4 py-2 text-sm text-red-400 hover:bg-gray-700 hover:text-red-300 transition-colors" do %>
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                  Eliminar Quiz
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Cabecera del Quiz con diseño mejorado -->
    <div class="mb-8 bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl shadow-lg overflow-hidden border border-gray-700">
      <!-- Banner superior con estado y código -->
      <div class="bg-gradient-to-r from-indigo-900/30 to-blue-900/30 border-b border-gray-700/50 p-4">
        <div class="flex flex-wrap justify-between items-center">
          <div class="flex items-center mb-2 sm:mb-0">
            <span class="px-3 py-1 rounded-full text-sm font-medium 
                    <%= case @quiz.estado 
                        when 'borrador' then 'bg-gray-700 text-gray-300'
                        when 'publicado' then 'bg-green-900/70 text-green-300'
                        when 'cerrado' then 'bg-red-900/70 text-red-300'
                        end %> mr-3">
              <%= @quiz.estado.titleize %>
            </span>
            
            <% if @quiz.codigo_acceso.present? %>
              <div class="group relative">
                <div class="flex items-center bg-gray-900/50 px-3 py-1 rounded-lg border border-gray-700/50 cursor-pointer"
                     data-controller="clipboard"
                     data-action="click->clipboard#copy"
                     data-clipboard-text-value="<%= @quiz.codigo_acceso %>">
                  <span class="font-mono text-sm text-blue-300 mr-2"><%= @quiz.codigo_acceso %></span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 group-hover:text-blue-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                  </svg>
                </div>
                <div data-clipboard-target="tooltip" class="hidden absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-2 py-1 bg-gray-800 text-xs text-white rounded whitespace-nowrap">
                  Copiado al portapapeles
                </div>
              </div>
            <% end %>
          </div>
          
          <div>
            <div class="text-xs text-gray-400">
              <% if @quiz.fecha_publicacion.present? %>
                Publicado: <%= l @quiz.fecha_publicacion, format: :short %>
              <% else %>
                No publicado aún
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="p-6">
        <div class="flex flex-col lg:flex-row justify-between">
          <div class="lg:w-2/3">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <span class="inline-flex items-center justify-center h-12 w-12 rounded-xl bg-gradient-to-br from-indigo-600 to-blue-700 text-white shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </span>
              </div>
              <div class="ml-4">
                <div class="flex items-center mb-2">
                  <h1 class="text-2xl font-bold text-white mr-3 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-indigo-400"><%= @quiz.titulo %></h1>
                  
                  <% if @quiz.peso_calificacion.present? && @quiz.peso_calificacion != 100 %>
                    <span class="ml-2 px-2 py-1 text-xs rounded-md bg-indigo-900/50 text-indigo-300">
                      <%= @quiz.peso_calificacion %>% de la nota
                    </span>
                  <% end %>
                </div>
                <p class="text-gray-400 max-w-3xl"><%= @quiz.descripcion %></p>
                
                <!-- Indicador de progreso (curso) -->
                <div class="mt-4 flex items-center">
                  <div class="flex-shrink-0 mr-3">
                    <div class="w-10 h-10 rounded-full bg-indigo-900/40 flex items-center justify-center">
                      <span class="text-indigo-300 font-medium"><%= @quiz.curso.nombre[0,2].upcase %></span>
                    </div>
                  </div>
                  <div>
                    <p class="text-white font-medium"><%= @quiz.curso.nombre %></p>
                    <p class="text-sm text-gray-500">
                      <% if @quiz.laboratorio %>
                        Lab: <%= link_to @quiz.laboratorio.nombre, laboratorio_path(@quiz.laboratorio), class: "text-indigo-400 hover:text-indigo-300" %>
                      <% else %>
                        Quiz independiente
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Configuración adicional -->
            <% if current_usuario.profesor? || current_usuario.admin? %>
              <div class="mt-5 ml-16 grid grid-cols-2 md:grid-cols-3 gap-3">
                <div class="flex items-center">
                  <div class="p-1 rounded-full <%= @quiz.mostrar_resultados_inmediatos ? 'bg-green-900/20 text-green-400' : 'bg-gray-800 text-gray-500' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= @quiz.mostrar_resultados_inmediatos ? 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z' : 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z' %>" />
                    </svg>
                  </div>
                  <span class="ml-2 text-gray-400 text-sm">Mostrar resultados inmediatos</span>
                </div>
                
                <div class="flex items-center">
                  <div class="p-1 rounded-full <%= @quiz.aleatorizar_preguntas ? 'bg-green-900/20 text-green-400' : 'bg-gray-800 text-gray-500' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= @quiz.aleatorizar_preguntas ? 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z' : 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z' %>" />
                    </svg>
                  </div>
                  <span class="ml-2 text-gray-400 text-sm">Aleatorizar preguntas</span>
                </div>
                
                <div class="flex items-center">
                  <div class="p-1 rounded-full <%= @quiz.aleatorizar_opciones ? 'bg-green-900/20 text-green-400' : 'bg-gray-800 text-gray-500' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= @quiz.aleatorizar_opciones ? 'M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z' : 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z' %>" />
                    </svg>
                  </div>
                  <span class="ml-2 text-gray-400 text-sm">Aleatorizar opciones</span>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="mt-6 lg:mt-0 lg:ml-6 lg:w-1/3">
            <!-- Panel de fechas y configuración -->
            <div class="grid grid-cols-2 gap-3 text-sm">
              <div class="bg-gray-800/70 backdrop-blur-sm rounded-lg p-3 border border-gray-700 transition-transform hover:scale-105 duration-300">
                <div class="flex items-center mb-1 text-gray-400 text-xs">
                  <svg class="h-4 w-4 mr-1 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Tiempo Límite</span>
                </div>
                <span class="block text-white font-medium text-lg">
                  <%= @quiz.tiempo_limite %> minutos
                </span>
              </div>
              
              <div class="bg-gray-800/70 backdrop-blur-sm rounded-lg p-3 border border-gray-700 transition-transform hover:scale-105 duration-300">
                <div class="flex items-center mb-1 text-gray-400 text-xs">
                  <svg class="h-4 w-4 mr-1 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <span>Intentos Permitidos</span>
                </div>
                <span class="block text-white font-medium text-lg">
                  <%= @quiz.intentos_permitidos %>
                </span>
              </div>
              
              <div class="bg-gray-800/70 backdrop-blur-sm rounded-lg p-3 border border-gray-700 transition-transform hover:scale-105 duration-300 group">
                <div class="flex items-center mb-1 text-gray-400 text-xs">
                  <svg class="h-4 w-4 mr-1 text-gray-500 group-hover:text-green-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>Inicia</span>
                </div>
                <span class="block text-white font-medium">
                  <%= l @quiz.fecha_inicio, format: :short %>
                </span>
                <% if Time.current < @quiz.fecha_inicio %>
                  <span class="text-xs text-green-400 mt-1 block">
                    En <%= distance_of_time_in_words(Time.current, @quiz.fecha_inicio) %>
                  </span>
                <% end %>
              </div>
              
              <div class="bg-gray-800/70 backdrop-blur-sm rounded-lg p-3 border border-gray-700 transition-transform hover:scale-105 duration-300 group">
                <div class="flex items-center mb-1 text-gray-400 text-xs">
                  <svg class="h-4 w-4 mr-1 text-gray-500 group-hover:text-red-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>Finaliza</span>
                </div>
                <span class="block text-white font-medium">
                  <%= l @quiz.fecha_fin, format: :short %>
                </span>
                <% if Time.current < @quiz.fecha_fin && Time.current > @quiz.fecha_inicio %>
                  <span class="text-xs text-red-400 mt-1 block">
                    <%= distance_of_time_in_words(Time.current, @quiz.fecha_fin) %> restantes
                  </span>
                <% end %>
              </div>
            </div>
            
            <!-- Estadísticas rápidas para profesores -->
            <% if current_usuario.profesor? || current_usuario.admin? %>
              <div class="mt-4 bg-gray-800/70 backdrop-blur-sm rounded-lg border border-gray-700 p-3">
                <h3 class="text-sm font-medium text-gray-300 mb-2 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
