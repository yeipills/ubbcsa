                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                        </svg>
                        Intentos anteriores
                      </h4>
                      
                      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                        <% @intentos_anteriores.each do |intento| %>
                          <%= link_to resultados_quiz_intento_path(@quiz, intento), 
                              class: "flex items-center p-4 bg-gray-800 rounded-lg border border-gray-700 hover:border-blue-500/50 hover:bg-gray-750 transition-all duration-200 group" do %>
                            <div class="w-10 h-10 rounded-full flex items-center justify-center mr-3 <%= intento.puntaje_total >= 60 ? 'bg-green-900/30 text-green-300' : 'bg-red-900/30 text-red-300' %>">
                              <%= intento.numero_intento %>
                            </div>
                            <div class="flex-1">
                              <div class="flex items-center justify-between">
                                <span class="text-gray-300 group-hover:text-white transition-colors">
                                  <%= l intento.created_at, format: :short %>
                                </span>
                                <span class="text-lg font-medium <%= intento.puntaje_total >= 60 ? 'text-green-400' : 'text-red-400' %>">
                                  <%= number_to_percentage(intento.puntaje_total, precision: 0) %>
                                </span>
                              </div>
                              <div class="flex items-center text-xs text-gray-500 mt-1">
                                <span class="mr-2">
                                  <% minutos = ((intento.finalizado_en - intento.iniciado_en) / 60).floor %>
                                  <% segundos = (intento.finalizado_en - intento.iniciado_en).to_i % 60 %>
                                  <%= pluralize(minutos, 'min') %> <%= segundos %> seg
                                </span>
                                <span class="mx-2">•</span>
                                <span>
                                  <%= intento.respuestas.where(es_correcta: true).count %> / <%= @quiz.preguntas.count %> correctas
                                </span>
                              </div>
                            </div>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  
                  <% if @quiz.intentos_disponibles_para?(current_usuario) && (!@intento || !@intento.persisted?) %>
