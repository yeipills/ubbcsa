                    <span class="text-gray-400">Total de preguntas:</span>
                    <span class="text-white font-medium"><%= @quiz.preguntas.count %></span>
                  </div>
                  <div class="flex justify-between items-center py-3">
                    <span class="text-gray-400">Tu mejor puntaje:</span>
                    <% if mejor_intento = @quiz.mejor_intento_para(current_usuario) %>
                      <span class="text-white font-medium px-2 py-1 rounded-full <%= mejor_intento.puntaje_total >= 60 ? 'bg-green-900/30 text-green-300' : 'bg-red-900/30 text-red-300' %>">
                        <%= number_to_percentage(mejor_intento.puntaje_total, precision: 0) %>
                      </span>
                    <% else %>
                      <span class="text-gray-500">No disponible</span>
                    <% end %>
                  </div>
                  <div class="flex justify-between items-center py-3">
                    <span class="text-gray-400">Intentos realizados:</span>
                    <span class="text-white font-medium">
                      <span class="<%= @quiz.intentos.where(usuario: current_usuario).count >= @quiz.intentos_permitidos ? 'text-red-300' : 'text-white' %>">
                        <%= @quiz.intentos.where(usuario: current_usuario).count %>
                      </span> / <%= @quiz.intentos_permitidos %>
                    </span>
                  </div>
                  <% if @quiz.intentos.where(usuario: current_usuario).any? %>
                    <div class="flex justify-between items-center py-3">
                      <span class="text-gray-400">Tiempo promedio:</span>
                      <% intentos_completados = @quiz.intentos.where(usuario: current_usuario, estado: 'completado') %>
                      <% if intentos_completados.any? %>
                        <% tiempo_total = intentos_completados.sum { |i| i.finalizado_en - i.iniciado_en } %>
                        <% tiempo_promedio = tiempo_total / intentos_completados.count %>
                        <span class="text-white font-medium">
                          <%= (tiempo_promedio / 60).floor %> min <%= tiempo_promedio.to_i % 60 %> seg
                        </span>
                      <% else %>
                        <span class="text-gray-500">No disponible</span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                
                <% if @quiz.intentos.where(usuario: current_usuario).any? && @quiz.intentos_disponibles_para?(current_usuario) %>
                  <div class="mt-4">
                    <%= button_to quiz_intentos_path(@quiz), method: :post, 
                        class: "w-full text-center py-2 px-3 text-sm border border-blue-700/30 rounded-lg text-blue-400 hover:text-blue-300 hover:bg-blue-900/20 transition-colors" do %>
                      Iniciar nuevo intento
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Controlador para cuenta regresiva
    if (typeof Alpine !== 'undefined') {
      document.addEventListener('alpine:init', () => {
        Alpine.data('countdown', (targetDate) => ({
          targetDate: targetDate,
          days: '00',
          hours: '00',
          minutes: '00',
          seconds: '00',
          interval: null,
          
          init() {
            this.interval = setInterval(() => this.updateCountdown(), 1000);
            this.updateCountdown();
          },
          
          updateCountdown() {
            const now = new Date().getTime();
            const distance = this.targetDate - now;
            
            if (distance < 0) {
              clearInterval(this.interval);
              this.days = '00';
              this.hours = '00';
              this.minutes = '00';
              this.seconds = '00';
              return;
            }
            
            this.days = Math.floor(distance / (1000 * 60 * 60 * 24)).toString().padStart(2, '0');
            this.hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString().padStart(2, '0');
            this.minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
            this.seconds = Math.floor((distance % (1000 * 60)) / 1000).toString().padStart(2, '0');
          }
        }));
      });
    }
  });

  // Controlador para tooltips de copiado al portapapeles
  if (typeof Stimulus !== 'undefined') {
    (() => {
      const application = Stimulus.Application.start();
      
      application.register('clipboard', class extends Stimulus.Controller {
        static targets = ['tooltip'];
        static values = { text: String };
        
        copy() {
          navigator.clipboard.writeText(this.textValue);
          this.showTooltip();
        }
        
        showTooltip() {
          const tooltip = this.tooltipTarget;
          tooltip.classList.remove('hidden');
          
          setTimeout(() => {
            tooltip.classList.add('hidden');
          }, 2000);
        }
      });
    })();
  }
</script>