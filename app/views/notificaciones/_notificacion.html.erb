<%# app/views/notificaciones/_notificacion.html.erb %>
<div class="p-4 border-b border-gray-700 relative <%= notificacion.leida? ? 'bg-gray-800' : 'bg-gray-700' %>" data-notificacion-id="<%= notificacion.id %>">
  <div class="flex items-start">
    <div class="flex-shrink-0 mt-0.5">
      <% case notificacion.tipo %>
      <% when 'info' %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      <% when 'success' %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      <% when 'warning' %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% when 'error' %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <div class="ml-3 w-0 flex-1">
      <p class="text-sm font-medium text-gray-300">
        <%= notificacion.titulo %>
      </p>
      <p class="mt-1 text-sm text-gray-400">
        <%= notificacion.mensaje %>
      </p>
      <div class="mt-2 flex space-x-3">
        <% if notificacion.accion_url.present? %>
          <%= link_to notificacion.accion_texto.presence || "Ver", notificacion.accion_url, class: "text-xs text-blue-400 hover:text-blue-300" %>
        <% end %>
        <span class="text-xs text-gray-500">
          <%= time_ago_in_words(notificacion.created_at) %>
        </span>
      </div>
    </div>
    <div class="ml-4 flex-shrink-0 flex">
      <button type="button" data-action="click->notifications#markAsRead" data-id="<%= notificacion.id %>" class="rounded-md text-gray-400 hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
        <span class="sr-only">Cerrar</span>
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  <% unless notificacion.leida? %>
    <div class="absolute top-0 left-0 h-full w-1 bg-blue-500"></div>
  <% end %>
</div>