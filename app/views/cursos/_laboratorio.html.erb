<div class="bg-gray-800 rounded-xl p-5 hover:bg-gray-700/80 transition-all duration-300 border border-gray-700 hover:border-indigo-500 hover:shadow-lg group">
  <div class="flex justify-between items-start">
    <div>
      <div class="flex items-center mb-2">
        <h3 class="text-lg font-medium text-white group-hover:text-indigo-300 transition-colors duration-300"><%= laboratorio.nombre %></h3>
        <span class="ml-2 px-2.5 py-1 text-xs rounded-full <%= laboratorio.activo? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= laboratorio.activo? ? 'Activo' : 'Inactivo' %>
        </span>
      </div>
      <p class="text-sm text-gray-400 mb-3 line-clamp-2"><%= laboratorio.descripcion || "Sin descripciÃ³n" %></p>
      
      <div class="flex flex-wrap gap-2.5 text-xs text-gray-500 mb-3">
        <span class="inline-flex items-center px-2.5 py-1 rounded bg-gray-700">
          <svg class="mr-1.5 h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <%= laboratorio.fecha&.strftime('%d/%m/%Y') || 'Sin fecha' %>
        </span>
        <span class="inline-flex items-center px-2.5 py-1 rounded bg-gray-700">
          <svg class="mr-1.5 h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= pluralize(laboratorio.respond_to?(:ejercicios) ? laboratorio.ejercicios&.count || 0 : 0, 'ejercicio') %>
        </span>
      </div>
    </div>
  </div>

  <div class="mt-4 flex justify-end border-t border-gray-700 pt-4">
    <%= link_to laboratorio_path(laboratorio), class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-medium rounded-md transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 shadow-sm" do %>
      Ver detalles
      <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
      </svg>
    <% end %>
  </div>
</div>