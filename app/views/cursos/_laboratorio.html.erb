<div class="bg-gray-800 rounded-lg p-4 hover:bg-gray-700 transition-colors duration-200 border border-gray-700">
  <div class="flex justify-between items-start">
    <div>
      <div class="flex items-center mb-1">
        <h3 class="text-lg font-medium text-white"><%= laboratorio.nombre %></h3>
        <span class="ml-2 px-2 py-0.5 text-xs rounded-full <%= laboratorio.activo? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= laboratorio.activo? ? 'Activo' : 'Inactivo' %>
        </span>
      </div>
      <p class="text-sm text-gray-400 mb-2 line-clamp-2"><%= laboratorio.descripcion %></p>
      
      <div class="flex flex-wrap gap-2 text-xs text-gray-500 mb-2">
        <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-700">
          <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <%= laboratorio.fecha&.strftime('%d/%m/%Y') || 'Sin fecha' %>
        </span>
        <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-700">
          <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= pluralize(laboratorio.ejercicios&.count || 0, 'ejercicio') %>
        </span>
      </div>
    </div>
  </div>

  <div class="mt-3 flex justify-end border-t border-gray-700 pt-3">
    <%= link_to laboratorio_path(laboratorio), class: "inline-flex items-center px-3 py-1.5 bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-medium rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500" do %>
      Ver detalles
      <svg class="ml-1.5 h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
      </svg>
    <% end %>
  </div>
</div>