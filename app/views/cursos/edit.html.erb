<%= content_for :navbar do %>
  <%= render 'shared/navbar' %>
<% end %>

<main role="main" class="container mx-auto px-4 py-8">
  <nav class="flex items-center text-sm text-gray-400 mb-6" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Inicio", root_path, class: "hover:text-white" %>
      </li>
      <li class="flex items-center">
        <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= link_to "Cursos", cursos_path, class: "hover:text-white" %>
      </li>
      <li class="flex items-center">
        <svg class="h-5 w-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-white" aria-current="page"><%= @curso.persisted? ? "Editar curso" : "Nuevo curso" %></span>
      </li>
    </ol>
  </nav>

  <div class="max-w-5xl mx-auto">
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-700">
      <header class="mb-6 flex items-center">
        <% if @curso.persisted? %>
          <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        <% else %>
          <svg class="w-6 h-6 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-white">
          <%= @curso.persisted? ? "Editar Curso" : "Nuevo Curso" %>
        </h1>
      </header>
      
      <%= render 'form', curso: @curso %>
      
      <footer class="mt-6 pt-4 border-t border-gray-700">
        <%= link_to cursos_path, class: "inline-flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Volver a cursos
        <% end %>
      </footer>
    </div>
  </div>
</main>