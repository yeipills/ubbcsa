<div class="bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 border border-gray-700 overflow-hidden">
  <div class="relative">
    <div class="absolute top-0 inset-x-0 h-1 <%= curso.activo? ? 'bg-green-500' : 'bg-red-500' %>"></div>
    <div class="p-6">
      <div class="flex justify-between items-start mb-3">
        <h2 class="text-xl font-semibold text-white"><%= curso.nombre %></h2>
        <span class="px-2.5 py-1 text-xs font-medium rounded-full <%= curso.activo? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= curso.estado %>
        </span>
      </div>
      
      <p class="mt-2 text-gray-400 line-clamp-2"><%= truncate(curso.descripcion, length: 100) %></p>
      
      <div class="mt-4 grid grid-cols-2 gap-2 text-sm text-gray-400">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
          </svg>
          <span>CÃ³digo: <%= curso.codigo %></span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <span>Labs: <%= curso.laboratorios.count %></span>
        </div>
      </div>
      <div class="mt-4 pt-3 border-t border-gray-700">
        <%= link_to curso_path(curso), class: "inline-flex items-center justify-center w-full px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500" do %>
          Ver detalles
          <svg class="ml-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>