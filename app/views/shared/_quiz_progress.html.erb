<div class="bg-white rounded-lg shadow p-4">
  <div class="flex justify-between items-center mb-2">
    <h3 class="text-lg font-medium text-gray-900">Progreso del Quiz</h3>
    <span class="text-sm text-gray-500">
      <%= @intento.respuestas.count %>/<%= @quiz.preguntas.count %> respondidas
    </span>
  </div>
  
  <div class="relative pt-1">
    <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-gray-200">
      <div class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"
           style="width: <%= progreso_quiz(@intento) %>%">
      </div>
    </div>
  </div>
  
  <div class="grid grid-cols-5 gap-2 mt-4">
    <% @quiz.preguntas.each_with_index do |pregunta, index| %>
      <% respondida = @intento.respuestas.exists?(pregunta_id: pregunta.id) %>
      <div class="text-center">
        <a href="#pregunta_<%= pregunta.id %>" 
           class="inline-block w-8 h-8 rounded-full <%= respondida ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-600' %> flex items-center justify-center">
          <%= index + 1 %>
        </a>
      </div>
    <% end %>
  </div>
</div>