<div class="metrics-chart bg-gray-800 rounded-lg p-4 shadow-md"
     data-controller="metrics"
     data-metrics-sesion-id-value="<%= defined?(sesion_id) ? sesion_id : @sesion&.id %>">
  <h3 class="text-lg font-medium text-white mb-2">MÃ©tricas en tiempo real</h3>
  <div class="h-64">
    <canvas data-metrics-target="chart" id="metricsChart"></canvas>
  </div>
  
  <div class="mt-3 grid grid-cols-3 gap-4 text-center">
    <div class="bg-gray-700 rounded p-2">
      <p class="text-gray-400 text-xs">CPU</p>
      <p class="text-white font-medium" data-metric="cpu">0%</p>
    </div>
    
    <div class="bg-gray-700 rounded p-2">
      <p class="text-gray-400 text-xs">Memoria</p>
      <p class="text-white font-medium" data-metric="memory">0%</p>
    </div>
    
    <div class="bg-gray-700 rounded p-2">
      <p class="text-gray-400 text-xs">Red</p>
      <p class="text-white font-medium" data-metric="network">0 KB/s</p>
    </div>
  </div>
</div>