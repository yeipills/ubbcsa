<!-- app/views/shared/_flash.html.erb -->
<% flash.each do |type, message| %>
  <div class="fixed top-4 right-4 z-50 bg-gray-800 text-white px-6 py-4 rounded-lg shadow-lg border-l-4 flash-alert
    <%= type == 'notice' ? 'border-blue-500' : 'border-red-500' %>">
    
    <div class="flex items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <% if type == 'notice' %>
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        <% else %>
          <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        <% end %>
        
        <p><%= message %></p>
      </div>

      <button onclick="this.parentElement.parentElement.remove()" class="text-gray-400 hover:text-white">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  <script>
    setTimeout(function() {
      var flashAlert = document.querySelector('.flash-alert');
      if (flashAlert) flashAlert.remove();
    }, 5000);
  </script>
<% end %>