<%# app/views/intentos_quiz/show.html.erb %>
<div class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-950 text-white"
     data-controller="quiz"
     data-quiz-tiempo-limite-value="<%= @quiz.tiempo_limite %>"
     data-quiz-iniciado-value="<%= @intento.iniciado_en.to_i %>"
     data-quiz-quiz-id-value="<%= @quiz.id %>"
     data-quiz-intento-id-value="<%= @intento.id %>"
     data-quiz-pregunta-actual-value="<%= @current_pregunta&.id %>"
     data-quiz-total-preguntas-value="<%= @preguntas.count %>"
     data-quiz-respondidas-value="<%= @respuestas.keys.count %>"
     data-quiz-auto-save-value="true"
     data-quiz-completado-value="false">

  <!-- Header con título y temporizador - Sticky para mantenerlo siempre visible -->
  <div class="sticky top-0 z-10 backdrop-blur-md bg-gray-900/90 border-b border-gray-800 shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="flex items-center">
          <button class="md:hidden mr-3 p-2 rounded-lg bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors"
                  data-action="click->quiz#toggleNavigationPanel">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <h1 class="text-lg font-bold text-white truncate">
            <%= @quiz.titulo %>
          </h1>
        </div>
        
        <!-- Temporizador y Progreso en Flex Container -->
        <div class="flex items-center space-x-4 w-full sm:w-auto">
          <!-- Temporizador con efecto de urgencia basado en tiempo restante -->
          <div 
            class="bg-gray-800 p-2 rounded-lg border border-gray-700 shadow-lg transition-all"
            data-controller="quiz-timer"
            data-quiz-timer-tiempo-limite-value="<%= @quiz.tiempo_limite %>"
            data-quiz-timer-iniciado-en-value="<%= @intento.iniciado_en.to_i %>"
            data-quiz-timer-intento-id-value="<%= @intento.id %>"
            data-quiz-timer-quiz-id-value="<%= @quiz.id %>">
            
            <div class="flex flex-col items-center">
              <div class="flex items-center text-xs text-gray-400 mb-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                <span>Tiempo Restante</span>
              </div>
              
              <div class="w-full bg-gray-700 h-1.5 rounded-full overflow-hidden mb-1">
                <div 
                  data-quiz-timer-target="progressBar"
                  class="bg-gradient-to-r from-green-500 to-green-600 h-full rounded-full transition-all duration-1000"></div>
              </div>
              
              <span 
                data-quiz-timer-target="timeText"
                class="text-xl font-mono font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-blue-500">
                <%= @tiempo_restante / 60 %>:<%= '%02d' % (@tiempo_restante % 60) %>
              </span>
            </div>
          </div>
          
          <!-- Indicador de Progreso -->
          <div class="hidden md:flex flex-col items-center bg-gray-800 p-2 rounded-lg border border-gray-700">
            <div class="flex items-center text-xs text-gray-400 mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
              </svg>
              <span>Progreso</span>
            </div>
            
            <div class="w-full bg-gray-700 h-1.5 rounded-full overflow-hidden mb-1">
              <div 
                data-quiz-target="progressBar"
                class="bg-gradient-to-r from-blue-500 to-indigo-600 h-full rounded-full transition-all duration-300"
                style="width: <%= @progreso %>%;"></div>
            </div>
            
            <div class="flex items-center">
              <span data-quiz-target="progressText" class="text-white font-medium text-sm"><%= @respuestas.keys.count %></span>
              <span class="text-gray-400 mx-1 text-sm">/</span>
              <span class="text-gray-400 text-sm"><%= @preguntas.count %></span>
            </div>
          </div>
          
          <!-- Botón finalizar -->
          <button 
            type="button"
            data-quiz-target="finishButton"
            data-action="click->quiz#confirmFinalizar"
            class="px-4 py-2 <%= @todas_respondidas ? 'bg-gradient-to-r from-amber-600 to-amber-700 hover:from-amber-700 hover:to-amber-800' : 'bg-gray-700 opacity-75' %> text-white rounded-lg text-sm font-medium transition-colors duration-200 shadow-md"
            <%= 'disabled' unless @todas_respondidas %>>
            Finalizar Quiz
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Contenido principal con navegación y preguntas -->
  <div class="max-w-7xl mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
      <!-- Panel de navegación - Por defecto oculto en móvil -->
      <div class="lg:col-span-1" 
          data-quiz-target="navigationPanel"
          x-data="{ open: window.innerWidth >= 1024 }"
          x-show="open"
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 transform -translate-x-5"
          x-transition:enter-end="opacity-100 transform translate-x-0"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 transform translate-x-0"
          x-transition:leave-end="opacity-0 transform -translate-x-5"
          @resize.window="open = window.innerWidth >= 1024">
        <div class="sticky top-20">
          <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden shadow-lg">
            <div class="p-4 bg-gradient-to-r from-gray-800 to-gray-900 border-b border-gray-800 flex justify-between items-center">
              <h2 class="font-medium text-white flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM14 11a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0v-1h-1a1 1 0 110-2h1v-1a1 1 0 011-1z" />
                </svg>
                Navegación
              </h2>
              <div class="text-gray-400 text-sm flex items-center">
                <span data-quiz-target="respondidas" class="text-blue-400 font-medium"><%= @respuestas.keys.count %></span>
                <span class="mx-1">/</span>
                <span><%= @preguntas.count %></span>
              </div>
            </div>
            
            <div class="p-4">
              <!-- Progreso visual -->
              <div class="mb-4 bg-gray-800 p-3 rounded-lg border border-gray-700">
                <div class="text-center mb-2">
                  <div class="text-gray-400 text-xs mb-1">Progreso</div>
                  <div class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-indigo-500">
                    <%= @progreso %>%
                  </div>
                </div>
                <div class="w-full bg-gray-700 rounded-full h-2.5 mb-1 overflow-hidden">
                  <div class="bg-gradient-to-r from-blue-500 to-indigo-600 h-2.5 rounded-full shadow-lg shadow-blue-500/20" style="width: <%= @progreso %>%"></div>
                </div>
                <div class="flex justify-between text-xs text-gray-500">
                  <span>0%</span>
                  <span>50%</span>
                  <span>100%</span>
                </div>
              </div>
              
              <!-- Cuadrícula de navegación con animaciones -->
              <div class="mb-5">
                <h3 class="text-sm font-medium text-gray-400 mb-3">Preguntas</h3>
                <div class="grid grid-cols-5 gap-2" data-quiz-target="preguntaNav">
                  <% @preguntas.each do |pregunta| %>
                    <div class="text-center">
                      <button
                        type="button"
                        data-quiz-target="navItem"
                        data-action="click->quiz#irAPregunta"
                        data-pregunta-id="<%= pregunta.id %>"
                        data-orden="<%= pregunta.orden %>"
                        class="relative flex items-center justify-center h-10 w-10 rounded-lg 
                              <%= if @current_pregunta&.id == pregunta.id
                                    'bg-gradient-to-br from-indigo-600 to-blue-700 text-white shadow-lg shadow-indigo-600/20 ring-2 ring-indigo-400 ring-offset-2 ring-offset-gray-900'
                                  elsif @respuestas[pregunta.id]
                                    'bg-gradient-to-br from-green-600 to-green-700 text-white shadow shadow-green-600/10' 
                                  else
                                    'bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-gray-300 border border-gray-700'
                                  end %>
                                transition-all duration-200 group">
                        <%= pregunta.orden %>
                        
                        <% if @respuestas[pregunta.id] && pregunta.id != @current_pregunta&.id %>
                          <svg class="absolute -top-1 -right-1 h-4 w-4 text-green-300" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </button>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <!-- Leyenda -->
              <div class="space-y-2 text-sm border-t border-gray-800 pt-4">
                <h3 class="text-sm font-medium text-gray-400 mb-2">Leyenda</h3>
                <div class="flex items-center">
                  <span class="inline-block w-4 h-4 bg-gray-800 border border-gray-700 rounded mr-2"></span>
                  <span class="text-gray-400">Sin responder</span>
                </div>
                <div class="flex items-center">
                  <span class="inline-block w-4 h-4 bg-gradient-to-br from-green-600 to-green-700 rounded mr-2"></span>
                  <span class="text-gray-400">Respondida</span>
                </div>
                <div class="flex items-center">
                  <span class="inline-block w-4 h-4 bg-gradient-to-br from-indigo-600 to-blue-700 rounded mr-2"></span>
                  <span class="text-gray-400">Pregunta actual</span>
                </div>
              </div>
              
              <!-- Botones de navegación -->
              <div class="flex justify-between mt-6 border-t border-gray-800 pt-4">
                <button 
                  type="button"
                  data-action="click->quiz#irAAnterior"
                  class="flex items-center px-3 py-1.5 bg-gray-800 hover:bg-gray-700 text-gray-300 text-sm rounded-lg transition-colors shadow-sm hover:shadow
                         <%= 'opacity-50 cursor-not-allowed' unless @current_pregunta&.pregunta_anterior %>"
                  <%= 'disabled' unless @current_pregunta&.pregunta_anterior %>>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                  </svg>
                  Anterior
                </button>
                
                <button 
                  type="button"
                  data-action="click->quiz#irASiguiente"
                  class="flex items-center px-3 py-1.5 bg-gray-800 hover:bg-gray-700 text-gray-300 text-sm rounded-lg transition-colors shadow-sm hover:shadow
                         <%= 'opacity-50 cursor-not-allowed' unless @current_pregunta&.siguiente_pregunta %>"
                  <%= 'disabled' unless @current_pregunta&.siguiente_pregunta %>>
                  Siguiente
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contenido principal de la pregunta -->
      <div class="lg:col-span-4" data-quiz-target="preguntaContainer">
        <% if @current_pregunta %>
          <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden shadow-xl">
            <!-- Encabezado de la pregunta con información y número de pregunta -->
            <div class="p-5 border-b border-gray-800 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 bg-gradient-to-r from-gray-900 to-gray-800">
              <div class="flex items-center">
                <div class="flex-shrink-0 relative">
                  <span class="inline-flex items-center justify-center h-10 w-10 rounded-lg bg-gradient-to-br from-indigo-600 to-blue-700 text-white font-medium mr-3 shadow-lg shadow-indigo-900/20">
                    <%= @current_pregunta.orden %>
                  </span>
                  <span class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 flex h-3 w-3">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-3 w-3 bg-blue-500"></span>
                  </span>
                </div>
                <h2 class="text-lg font-medium text-white">Pregunta <%= @current_pregunta.orden %> de <%= @preguntas.count %></h2>
              </div>
              <div>
                <span class="px-2 py-1 bg-blue-900/40 text-blue-300 text-xs rounded-lg border border-blue-800/30 font-medium flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                  </svg>
                  <%= @current_pregunta.tipo_display %> - <%= @current_pregunta.puntaje %> puntos
                </span>
              </div>
            </div>
            
            <!-- Contenido de la pregunta -->
            <div class="p-5 bg-gray-900">
              <div class="prose prose-invert max-w-none">
                <div class="text-gray-200 text-lg font-medium"><%= @current_pregunta.contenido %></div>
                
                <% if @current_pregunta.imagen.attached? %>
                  <div class="mt-4 bg-gray-800/50 p-3 rounded-lg border border-gray-700 inline-block max-w-full">
                    <%= image_tag url_for(@current_pregunta.imagen), class: "max-w-full h-auto rounded shadow-md" %>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Formulario de respuesta con estilos mejorados para cada tipo de pregunta -->
            <div class="p-5 bg-gray-800/50 border-t border-gray-800">
              <%= form_with url: update_quiz_intento_path(@quiz, @intento), 
                        method: :patch, 
                        html: { 
                          class: "pregunta-form transition-opacity",
                          id: "form-pregunta-#{@current_pregunta.id}" 
                        },
                        data: { 
                          action: "change->quiz#formCambio input->quiz#formCambio submit->quiz#guardarRespuesta", 
                          quiz_form_target: "form",
                          pregunta_id: @current_pregunta.id
                        } do |f| %>
                    
                <%= hidden_field_tag :pregunta_id, @current_pregunta.id %>
                
                <% case @current_pregunta.tipo %>
                <% when 'opcion_multiple' %>
                  <fieldset>
                    <legend class="text-gray-300 font-medium mb-3 flex items-center text-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      Selecciona una respuesta:
                    </legend>
                    <div class="space-y-3">
                      <% @current_pregunta.opciones.each do |opcion| %>
                        <div class="relative">
                          <input 
                            id="opcion_<%= opcion.id %>" 
                            name="respuesta_quiz[opcion_id]" 
                            type="radio" 
                            value="<%= opcion.id %>"
                            <%= 'checked' if @respuestas[@current_pregunta.id]&.opcion_id == opcion.id %>
                            class="peer sr-only">
                          <label for="opcion_<%= opcion.id %>" 
                                class="flex items-center p-4 rounded-lg cursor-pointer
                                       border border-gray-700 bg-gray-800 hover:bg-gray-750
                                       peer-checked:border-blue-500 peer-checked:bg-blue-900/20
                                       peer-checked:shadow-lg peer-checked:shadow-blue-900/10
                                       transition-all duration-200">
                            <div class="w-5 h-5 rounded-full border border-gray-600 flex items-center justify-center mr-3 peer-checked:border-blue-500 transition-all">
                              <div class="w-3 h-3 rounded-full bg-blue-500 transition-all peer-checked:scale-100 scale-0"></div>
                            </div>
                            <div class="flex-1">
                              <span class="block text-white group-hover:text-white peer-checked:text-blue-300 transition-colors">
                                <%= opcion.contenido %>
                              </span>
                              <% if opcion.imagen.attached? %>
                                <div class="mt-2 max-w-xs">
                                  <%= image_tag opcion.imagen, class: "rounded max-h-32" %>
                                </div>
                              <% end %>
                            </div>
                          </label>
                        </div>
                      <% end %>
                    </div>
                  </fieldset>
                
                <% when 'verdadero_falso' %>
                  <fieldset>
                    <legend class="text-gray-300 font-medium mb-3 flex items-center text-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                      </svg>
                      Indica si la afirmación es verdadera o falsa:
                    </legend>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                      <% @current_pregunta.opciones.each do |opcion| %>
                        <div class="relative">
                          <input 
                            id="opcion_<%= opcion.id %>" 
                            name="respuesta_quiz[opcion_id]" 
                            type="radio" 
                            value="<%= opcion.id %>"
                            <%= 'checked' if @respuestas[@current_pregunta.id]&.opcion_id == opcion.id %>
                            class="peer sr-only">
                          <label for="opcion_<%= opcion.id %>" 
                                class="flex items-center p-4 rounded-lg cursor-pointer
                                       border border-gray-700 bg-gray-800 hover:bg-gray-750
                                       <%= opcion.contenido.downcase == 'verdadero' ? 'hover:border-green-600/30' : 'hover:border-red-600/30' %>
                                       peer-checked:shadow-lg
                                       <%= opcion.contenido.downcase == 'verdadero' ? 'peer-checked:border-green-500 peer-checked:bg-green-900/20 peer-checked:shadow-green-900/10' : 'peer-checked:border-red-500 peer-checked:bg-red-900/20 peer-checked:shadow-red-900/10' %>
                                       transition-all duration-200 h-full justify-center">
                            <span class="text-center text-lg font-medium
                                  <%= opcion.contenido.downcase == 'verdadero' ? 'peer-checked:text-green-400' : 'peer-checked:text-red-400' %>
                                  transition-colors">
                              <%= opcion.contenido %>
                            </span>
                          </label>
                        </div>
                      <% end %>
                    </div>
                  </fieldset>
                  
                <% when 'multiple_respuesta' %>
                  <fieldset>
                    <legend class="text-gray-300 font-medium mb-3 flex items-center text-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                      </svg>
                      Selecciona todas las respuestas correctas:
                    </legend>
                    <div class="space-y-3">
                      <% 
                      selected_ids = []
                      if @respuestas[@current_pregunta.id]&.opciones_multiples.present?
                        begin
                          selected_ids = JSON.parse(@respuestas[@current_pregunta.id].opciones_multiples)
                        rescue JSON::ParserError
                          selected_ids = []
                        end
                      end
                      %>
                      
                      <% @current_pregunta.opciones.each do |opcion| %>
                        <div class="relative">
                          <input 
                            id="opcion_<%= opcion.id %>" 
                            name="respuesta_quiz[opciones_seleccionadas][]" 
                            type="checkbox" 
                            value="<%= opcion.id %>"
                            <%= 'checked' if selected_ids.include?(opcion.id) %>
                            class="peer sr-only">
                          <label for="opcion_<%= opcion.id %>" 
                                class="flex items-center p-4 rounded-lg cursor-pointer
                                       border border-gray-700 bg-gray-800 hover:bg-gray-750
                                       peer-checked:border-purple-500 peer-checked:bg-purple-900/20
                                       peer-checked:shadow-lg peer-checked:shadow-purple-900/10
                                       transition-all duration-200">
