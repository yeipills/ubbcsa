<script>
// Este JavaScript mejora la funcionalidad de la vista del quiz
document.addEventListener('DOMContentLoaded', function() {
  // Implementación de alpine.js para los paneles de navegación responsive
  if (typeof Alpine === 'undefined') {
    // Fallback si Alpine no está disponible
    const toggleNav = document.querySelector('[data-action="click->quiz#toggleNavigationPanel"]');
    const navPanel = document.querySelector('[data-quiz-target="navigationPanel"]');
    
    if (toggleNav && navPanel) {
      toggleNav.addEventListener('click', function() {
        if (navPanel.classList.contains('hidden')) {
          navPanel.classList.remove('hidden');
        } else {
          navPanel.classList.add('hidden');
        }
      });
    }
  }
  
  // Ocultar notificación de autoguardado después de un tiempo
  function showAutoSaveNotification() {
    const notif = document.querySelector('[data-quiz-target="autoSaveNotif"]');
    if (notif) {
      notif.classList.remove('hidden');
      setTimeout(() => {
        notif.classList.add('hidden');
      }, 3000);
    }
  }
  
  // Contador de caracteres para respuesta corta
  const textareas = document.querySelectorAll('textarea[name="respuesta_quiz[respuesta_texto]"]');
  const charCount = document.querySelector('[data-quiz-target="charCount"]');
  
  if (textareas.length > 0 && charCount) {
    const textarea = textareas[0];
    charCount.textContent = textarea.value.length;
    
    textarea.addEventListener('input', function() {
      charCount.textContent = this.value.length;
    });
  }
  
  // Color del temporizador basado en tiempo restante
  function updateTimerColor(tiempoRestante, tiempoLimite) {
    const progressBar = document.querySelector('[data-quiz-timer-target="progressBar"]');
    const timeText = document.querySelector('[data-quiz-timer-target="timeText"]');
    
    if (!progressBar || !timeText) return;
    
    const porcentajeRestante = (tiempoRestante / (tiempoLimite * 60)) * 100;
    
    if (porcentajeRestante <= 25) {
      // Rojo para menos del 25%
      progressBar.className = 'bg-gradient-to-r from-red-500 to-red-600 h-full rounded-full transition-all duration-1000';
      timeText.className = 'text-xl font-mono font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-red-400 to-red-500 animate-pulse';
    } else if (porcentajeRestante <= 50) {
      // Naranja para menos del 50%
      progressBar.className = 'bg-gradient-to-r from-amber-500 to-amber-600 h-full rounded-full transition-all duration-1000';
      timeText.className = 'text-xl font-mono font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-amber-400 to-amber-500';
    } else {
      // Verde para más del 50%
      progressBar.className = 'bg-gradient-to-r from-green-500 to-green-600 h-full rounded-full transition-all duration-1000';
      timeText.className = 'text-xl font-mono font-bold text-white bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-blue-500';
    }
  }
  
  // Inicializar el color del temporizador
  const tiempoLimiteElement = document.querySelector('[data-quiz-tiempo-limite-value]');
  const timeTextElement = document.querySelector('[data-quiz-timer-target="timeText"]');
  
  if (tiempoLimiteElement && timeTextElement) {
    const tiempoLimite = parseInt(tiempoLimiteElement.getAttribute('data-quiz-tiempo-limite-value'), 10);
    const tiempoText = timeTextElement.textContent.trim();
    const [minutes, seconds] = tiempoText.split(':').map(part => parseInt(part, 10));
    const tiempoRestante = minutes * 60 + seconds;
    
    updateTimerColor(tiempoRestante, tiempoLimite);
    
    // Actualizar el color cada segundo
    setInterval(() => {
      const timeText = document.querySelector('[data-quiz-timer-target="timeText"]').textContent.trim();
      const [min, sec] = timeText.split(':').map(part => parseInt(part, 10));
      const restante = min * 60 + sec;
      updateTimerColor(restante, tiempoLimite);
    }, 1000);
  }
});
</script>