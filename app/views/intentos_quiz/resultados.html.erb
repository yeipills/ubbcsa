<%# app/views/intentos_quiz/resultados.html.erb %>
<div class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-950 text-white"
     data-controller="quiz-results"
     data-quiz-results-intento-id-value="<%= @intento.id %>"
     data-quiz-results-quiz-id-value="<%= @quiz.id %>"
     data-quiz-results-puntaje-value="<%= @intento.puntaje_total %>"
     data-quiz-results-comparacion-curso-value="<%= {
       promedio: @promedio_curso,
       mejor: @quiz.intentos.completado.maximum(:puntaje_total),
       tiempo_usuario: @tiempo_total,
       tiempo_promedio: @quiz.tiempo_promedio_segundos
     }.to_json %>">

  <!-- Encabezado de resultados con efectos visuales -->
  <div class="sticky top-0 z-10 backdrop-blur-md bg-gray-900/90 border-b border-gray-800 shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
              <li class="inline-flex items-center">
                <%= link_to dashboard_path, class: "inline-flex items-center text-sm font-medium text-gray-400 hover:text-blue-400 transition-colors" do %>
                  <svg class="mr-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                  </svg>
                  Inicio
                <% end %>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <%= link_to quizzes_path, class: "ml-1 text-sm font-medium text-gray-400 hover:text-blue-400 md:ml-2 transition-colors" do %>
                    Quizzes
                  <% end %>
                </div>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <%= link_to @quiz.titulo, quiz_path(@quiz), class: "ml-1 text-sm font-medium text-gray-400 hover:text-blue-400 md:ml-2 truncate max-w-[150px] sm:max-w-xs transition-colors" %>
                </div>
              </li>
              <li aria-current="page">
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="ml-1 text-sm font-medium text-gray-300 md:ml-2">
                    Resultados
                  </span>
                </div>
              </li>
            </ol>
          </nav>
        </div>
        
        <div class="flex space-x-3">
          <%= link_to quiz_path(@quiz), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gray-800 text-white hover:bg-gray-700 transition-colors duration-200 shadow-sm hover:shadow" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver al Quiz
          <% end %>
          
          <button 
            type="button"
            data-action="quiz-results#imprimirResultados"
            class="inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-indigo-700 text-white hover:bg-indigo-600 transition-colors duration-200 shadow-sm hover:shadow print:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zm0 8H7v4h6v-4z" clip-rule="evenodd" />
            </svg>
            Imprimir
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Tarjeta de resumen de resultados -->
    <div class="mb-8 bg-gradient-to-r from-gray-800 to-gray-900 rounded-xl shadow-xl overflow-hidden border border-gray-700 print:border print:border-gray-300 print:shadow-none print:bg-white print:text-black">
      <div class="relative overflow-hidden">
        <!-- Fondo decorativo del banner (solo visible en pantalla) -->
        <div class="absolute inset-0 overflow-hidden print:hidden">
          <div class="absolute inset-0 bg-gradient-to-r 
                      <%= @intento.puntaje_total >= 60 ? 'from-green-600/10 to-blue-600/10' : 'from-red-600/10 to-amber-600/10' %> 
                      backdrop-blur-sm"></div>
          <div class="absolute -right-10 -top-10 w-64 h-64 bg-gradient-to-br 
                      <%= @intento.puntaje_total >= 60 ? 'from-green-500/30 to-blue-500/30' : 'from-red-500/20 to-amber-500/20' %> 
                      rounded-full blur-3xl"></div>
          <div class="absolute -left-10 -bottom-10 w-64 h-64 bg-gradient-to-tr 
                      <%= @intento.puntaje_total >= 60 ? 'from-indigo-500/20 to-teal-500/20' : 'from-amber-500/15 to-red-500/15' %> 
                      rounded-full blur-3xl"></div>
        </div>
  
        <div class="relative p-6 z-10">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-center">
            <!-- Información del quiz -->
            <div class="md:col-span-2">
              <div class="flex flex-col md:flex-row md:items-center gap-4">
                <div>
                  <h1 class="text-2xl font-bold text-white mb-2 print:text-black"><%= @quiz.titulo %></h1>
                  <p class="text-indigo-200 print:text-gray-700">Resultados del Intento #<%= @intento.numero_intento %></p>
                  <div class="flex flex-col md:flex-row md:items-center gap-1 md:gap-4 text-indigo-200/80 text-sm mt-2 print:text-gray-700">
                    <p>Completado: <%= l @intento.finalizado_en, format: :long %></p>
                    <div class="hidden md:block w-1 h-1 rounded-full bg-indigo-400/50"></div>
                    <p>Duración: <%= distance_of_time_in_words(@intento.iniciado_en, @intento.finalizado_en) %></p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Puntaje grande con animación -->
            <div class="flex justify-center md:justify-end">
              <div class="relative"
                   data-controller="circle-progress"
                   data-circle-progress-percentage-value="<%= @intento.puntaje_total %>"
                   data-circle-progress-color-value="<%= @intento.puntaje_total >= 60 ? '#10B981' : '#EF4444' %>">
                <svg class="w-36 h-36 print:hidden" viewBox="0 0 100 100">
                  <!-- Círculo de fondo -->
                  <circle 
                    cx="50" cy="50" r="45" 
                    fill="none" 
                    stroke="#374151" 
                    stroke-width="8"
                    stroke-linecap="round">
                  </circle>
                  
                  <!-- Círculo de progreso animado -->
                  <circle 
                    cx="50" cy="50" r="45" 
                    fill="none" 
                    stroke="<%= @intento.puntaje_total >= 60 ? '#10B981' : '#EF4444' %>" 
                    stroke-width="8"
                    stroke-linecap="round"
                    stroke-dasharray="283"
                    stroke-dashoffset="283"
                    data-circle-progress-target="circle"
                    class="transition-all duration-1500 ease-out">
                  </circle>
                  
                  <!-- Texto central -->
                  <text 
                    x="50" y="50" 
                    font-size="20" 
                    text-anchor="middle" 
                    alignment-baseline="middle"
                    fill="white"
                    font-weight="bold"
                    data-circle-progress-target="text">
                    0%
                  </text>
                  
                  <!-- Texto de estado -->
                  <text 
                    x="50" y="65" 
                    font-size="8" 
                    text-anchor="middle" 
                    alignment-baseline="middle"
                    fill="<%= @intento.puntaje_total >= 60 ? '#10B981' : '#EF4444' %>"
                    font-weight="bold">
                    <%= @intento.puntaje_total >= 60 ? 'APROBADO' : 'NO APROBADO' %>
                  </text>
                </svg>
                
                <!-- Versión para impresión -->
                <div class="hidden print:block text-center">
                  <div class="text-4xl font-bold <%= @intento.puntaje_total >= 60 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_percentage(@intento.puntaje_total, precision: 1) %>
                  </div>
                  <div class="text-sm font-medium mt-1 <%= @intento.puntaje_total >= 60 ? 'text-green-600' : 'text-red-600' %>">
                    <%= @intento.puntaje_total >= 60 ? 'APROBADO' : 'NO APROBADO' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Tarjetas de estadísticas -->
          <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-lg p-4 border border-gray-700/50 hover:border-blue-500/20 transition-all duration-200 hover:bg-gray-800/70 print:bg-gray-100 print:border-gray-300">
              <div class="flex items-center mb-2">
                <div class="p-2 bg-blue-900/20 rounded-lg mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                    <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h2 class="text-sm font-medium text-gray-400 print:text-gray-700">Preguntas Correctas</h2>
              </div>
              <div class="flex items-end space-x-1 ml-12">
                <span class="text-2xl font-bold text-white print:text-black" data-count-up data-target="<%= @preguntas_correctas %>">0</span>
                <span class="text-sm text-gray-400 print:text-gray-500 pb-1">/ <%= @preguntas.count %></span>
              </div>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-lg p-4 border border-gray-700/50 hover:border-green-500/20 transition-all duration-200 hover:bg-gray-800/70 print:bg-gray-100 print:border-gray-300">
              <div class="flex items-center mb-2">
                <div class="p-2 bg-green-900/20 rounded-lg mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h2 class="text-sm font-medium text-gray-400 print:text-gray-700">Tiempo Total</h2>
              </div>
              <div class="ml-12">
                <% 
                  minutos = (@tiempo_total / 60).to_i
                  segundos = @tiempo_total % 60
                %>
                <div class="text-2xl font-bold text-white print:text-black">
                  <span data-count-up data-target="<%= minutos %>">0</span>:<%= '%02d' % segundos %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  <%= @tiempo_total < @quiz.tiempo_limite * 60 ? 'Completado antes del límite' : 'Tiempo agotado' %>
                </div>
              </div>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-lg p-4 border border-gray-700/50 hover:border-purple-500/20 transition-all duration-200 hover:bg-gray-800/70 print:bg-gray-100 print:border-gray-300">
              <div class="flex items-center mb-2">
                <div class="p-2 bg-purple-900/20 rounded-lg mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
                  </svg>
                </div>
                <h2 class="text-sm font-medium text-gray-400 print:text-gray-700">Comparativa</h2>
              </div>
              <div class="ml-12">
                <div class="text-2xl font-bold text-white print:text-black flex items-center">
                  <% if @promedio_curso > 0 %>
                    <% diff = @intento.puntaje_total - @promedio_curso %>
                    <span class="<%= diff >= 0 ? 'text-green-400 print:text-green-600' : 'text-red-400 print:text-red-600' %>">
                      <%= diff >= 0 ? '+' : '' %><%= number_to_percentage(diff, precision: 1) %>
                    </span>
                  <% else %>
                    <span class="text-gray-500">Sin datos</span>
                  <% end %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  vs. promedio de la clase (<%= number_to_percentage(@promedio_curso, precision: 1) %>)
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sección principal con gráficos y lista de preguntas -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Panel principal con resultados detallados -->
      <div class="lg:col-span-2">
        <!-- Filtros de preguntas -->
        <div class="flex justify-between items-center mb-4 print:hidden">
          <div class="w-64">
            <label for="pregunta-filtro" class="block text-gray-400 text-sm mb-1">Filtrar preguntas</label>
            <select 
              id="pregunta-filtro" 
              data-quiz-results-target="questionFilter"
              data-action="change->quiz-results#filtrarPreguntas"
              class="bg-gray-800 border border-gray-700 text-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                <option value="todas">Todas las preguntas</option>
                <option value="correctas">Solo correctas</option>
                <option value="incorrectas">Solo incorrectas</option>
            </select>
          </div>
          
          <div class="text-right">
            <p class="text-gray-400 text-sm mb-1">Respuestas</p>
            <div class="flex items-center space-x-2">
              <div class="flex items-center">
                <span class="inline-block w-3 h-3 rounded-full bg-green-500 mr-1.5"></span>
                <span data-quiz-results-target="correctCount" class="font-medium text-green-400"><%= @preguntas_correctas %></span>
              </div>
              <span class="text-gray-600">|</span>
              <div class="flex items-center">
                <span class="inline-block w-3 h-3 rounded-full bg-red-500 mr-1.5"></span>
                <span data-quiz-results-target="incorrectCount" class="font-medium text-red-400"><%= @preguntas.count - @preguntas_correctas %></span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Lista de preguntas con respuestas -->
        <div class="space-y-6 mb-6" data-quiz-results-target="preguntasList">
          <% @preguntas.each_with_index do |pregunta, index| %>
            <% respuesta = @respuestas[pregunta.id] %>
            <div class="pregunta-resultado bg-gray-900 rounded-xl border transition-all duration-300 hover:shadow-lg
                       <%= respuesta&.es_correcta? ? 'border-green-700/50 hover:border-green-600' : 'border-red-700/50 hover:border-red-600' %>" 
                 data-correcta="<%= respuesta&.es_correcta? || false %>">
              
              <!-- Encabezado de pregunta -->
              <div class="p-5 flex items-start justify-between border-b border-gray-800 
                          <%= respuesta&.es_correcta? ? 'bg-green-900/10' : 'bg-red-900/10' %>
                          print:<%= respuesta&.es_correcta? ? 'bg-green-100' : 'bg-red-100' %>">
                <div class="flex items-center">
                  <div class="flex-shrink-0 mr-3">
                    <span class="inline-flex h-9 w-9 items-center justify-center rounded-lg
                                <%= respuesta&.es_correcta? ? 
                                    'bg-gradient-to-br from-green-600 to-green-700 text-white shadow-md shadow-green-600/20' : 
                                    'bg-gradient-to-br from-red-600 to-red-700 text-white shadow-md shadow-red-600/20' %>
                                print:<%= respuesta&.es_correcta? ? 'bg-green-500 text-white' : 'bg-red-500 text-white' %>">
                      <%= index + 1 %>
                    </span>
                  </div>
                  <div>
                    <h3 class="text-white font-medium print:text-black"><%= truncate(pregunta.contenido, length: 80) %></h3>
                    <div class="mt-1 flex flex-wrap items-center gap-2 text-xs">
                      <span class="px-2 py-0.5 rounded-full bg-gray-800 text-gray-300 print:bg-gray-200 print:text-gray-700">
                        <%= pregunta.tipo_display %>
                      </span>
                      <span class="text-gray-400 print:text-gray-500">
                        <%= pregunta.puntaje %> puntos
                      </span>
                      <% if respuesta&.puntaje_obtenido %>
                        <span class="<%= respuesta.es_correcta? ? 'text-green-400 print:text-green-700' : 'text-red-400 print:text-red-700' %>">
                          <%= respuesta.puntaje_obtenido %> obtenidos
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <div>
                  <% if respuesta&.es_correcta? %>
                    <div class="p-1.5 bg-green-900/30 rounded-lg print:bg-green-200">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-400 print:text-green-700" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% else %>
                    <div class="p-1.5 bg-red-900/30 rounded-lg print:bg-red-200">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400 print:text-red-700" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <!-- Detalles colapsables -->
              <div class="p-5 bg-gray-900 print:bg-white">
                <button 
                  type="button"
                  data-quiz-results-target="detailToggle"
                  data-action="quiz-results#toggleDetalles"
                  data-detalle-target="detalles_<%= pregunta.id %>"
                  class="text-sm text-blue-400 hover:text-blue-300 mb-3 flex items-center focus:outline-none group print:hidden">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 transition-transform duration-300 group-bem-active:rotate-180" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  Ver detalles
                </button>
                
                <!-- Contenido colapsable -->
                <div id="detalles_<%= pregunta.id %>" class="hidden space-y-4 print:block">
                  <% if pregunta.imagen.attached? %>
                    <div class="bg-gray-800 p-3 rounded-lg border border-gray-700 inline-block max-w-full print:bg-gray-100 print:border-gray-300">
                      <%= image_tag url_for(pregunta.imagen), class: "max-w-full h-auto rounded max-h-40" %>
                    </div>
                  <% end %>
                  
                  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 print:bg-gray-100 print:border-gray-300">
                    <h4 class="text-gray-300 font-medium mb-2 print:text-gray-700">Pregunta completa:</h4>
                    <p class="text-white print:text-black"><%= simple_format(pregunta.contenido) %></p>
                  </div>
                  
                  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 print:bg-gray-100 print:border-gray-300">
                    <h4 class="text-gray-300 font-medium mb-2 print:text-gray-700">Tu respuesta:</h4>
                    
                    <% case pregunta.tipo %>
                    <% when 'opcion_multiple', 'verdadero_falso' %>
                      <% if respuesta&.opcion_id %>
                        <div class="<%= respuesta.es_correcta? ? 'bg-green-900/20 text-green-300 border-green-800/30' : 'bg-red-900/20 text-red-300 border-red-800/30' %> p-3 rounded-lg border
                                   print:<%= respuesta.es_correcta? ? 'bg-green-100 text-green-800 border-green-300' : 'bg-red-100 text-red-800 border-red-300' %>">
                          <%= respuesta.opcion.contenido %>
                        </div>
                        
                        <% if !respuesta.es_correcta? %>
                          <div class="mt-3">
                            <h5 class="text-sm text-gray-400 print:text-gray-600">Respuesta correcta:</h5>
                            <div class="bg-green-900/20 mt-1 p-3 rounded-lg border border-green-800/30 text-green-300 print:bg-green-100 print:text-green-800 print:border-green-300">
                              <%= pregunta.opciones.find_by(es_correcta: true)&.contenido || "No disponible" %>
                            </div>
                          </div>
                        <% end %>
                      <% else %>
                        <p class="text-gray-500 italic print:text-gray-600">Sin respuesta</p>
                      <% end %>
                      
                    <% when 'multiple_respuesta' %>
                      <% 
                        opciones_seleccionadas = []
                        if respuesta&.opciones_multiples.present?
                          begin
                            ids = JSON.parse(respuesta.opciones_multiples)
                            opciones_seleccionadas = pregunta.opciones.where(id: ids)
                          rescue JSON::ParserError
                            opciones_seleccionadas = []
                          end
                        end
                      %>
                      
                      <% if opciones_seleccionadas.any? %>
                        <div class="space-y-2">
                          <% opciones_seleccionadas.each do |opcion| %>
                            <div class="<%= opcion.es_correcta? ? 'bg-green-900/20 text-green-300 border-green-800/30' : 'bg-red-900/20 text-red-300 border-red-800/30' %> p-2 rounded-lg border
                                       print:<%= opcion.es_correcta? ? 'bg-green-100 text-green-800 border-green-300' : 'bg-red-100 text-red-800 border-red-300' %>">
                              <%= opcion.contenido %>
                            </div>
                          <% end %>
                        </div>
                        
                        <% if !respuesta.es_correcta? %>
                          <div class="mt-3">
                            <h5 class="text-sm text-gray-400 print:text-gray-600">Opciones correctas que no seleccionaste:</h5>
                            <div class="space-y-2 mt-1">
                              <% 
                                opciones_correctas_faltantes = pregunta.opciones.where(es_correcta: true)
                                                                      .where.not(id: opciones_seleccionadas.select(&:es_correcta?).map(&:id))
                              %>
                              <% opciones_correctas_faltantes.each do |opcion| %>
                                <div class="bg-green-900/20 p-2 rounded-lg border border-green-800/30 text-green-300 print:bg-green-100 print:text-green-800 print:border-green-300">
                                  <%= opcion.contenido %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      <% else %>
                        <p class="text-gray-500 italic print:text-gray-600">Sin respuesta</p>
                      <% end %>
                      
                    <% when 'respuesta_corta' %>
                      <% if respuesta&.respuesta_texto.present? %>
                        <div class="<%= respuesta.es_correcta? ? 'bg-green-900/20 text-green-300 border-green-800/30' : 'bg-red-900/20 text-red-300 border-red-800/30' %> p-3 rounded-lg border
                                   print:<%= respuesta.es_correcta? ? 'bg-green-100 text-green-800 border-green-300' : 'bg-red-100 text-red-800 border-red-300' %>">
                          <%= respuesta.respuesta_texto %>
                        </div>
                        
                        <% if !respuesta.es_correcta? %>
                          <div class="mt-3">
                            <h5 class="text-sm text-gray-400 print:text-gray-600">Respuesta correcta:</h5>
                            <div class="bg-green-900/20 mt-1 p-3 rounded-lg border border-green-800/30 text-green-300 print:bg-green-100 print:text-green-800 print:border-green-300">
                              <%= pregunta.respuesta_correcta %>
                            </div>
                          </div>
                        <% end %>
                        
                        <% if respuesta.comentario_revision.present? %>
                          <div class="mt-3 p-3 bg-blue-900/20 rounded-lg border border-blue-800/30 print:bg-blue-100 print:border-blue-300">
                            <h5 class="text-sm text-blue-300 font-medium print:text-blue-800">Comentario del revisor:</h5>
                            <p class="text-blue-200 mt-1 print:text-blue-900"><%= respuesta.comentario_revision %></p>
                          </div>
                        <% end %>
                      <% else %>
                        <p class="text-gray-500 italic print:text-gray-600">Sin respuesta</p>
                      <% end %>
                      
                    <% when 'emparejamiento' %>
                      <% 
                        pares_seleccionados = {}
                        if respuesta&.respuesta_texto.present?
                          begin
                            pares_seleccionados = JSON.parse(respuesta.respuesta_texto)
                          rescue JSON::ParserError
                            pares_seleccionados = {}
                          end
                        end
                      %>
                      
                      <% if pares_seleccionados.any? %>
                        <div class="space-y-3">
                          <% pregunta.terminos.each do |termino| %>
                            <% 
                              par_seleccionado_id = pares_seleccionados[termino.id.to_s]
                              par_correcto_id = termino.par_relacionado["id"].to_s
                              par_seleccionado = pregunta.opciones.find_by(id: par_seleccionado_id)
                              par_correcto = pregunta.opciones.find_by(id: par_correcto_id)
                              es_correcto = par_seleccionado_id == par_correcto_id
                            %>
                            
                            <div class="flex items-center">
                              <div class="bg-gray-700 p-2 rounded-lg w-1/2 text-white print:bg-gray-200 print:text-black"><%= termino.contenido %></div>
                              <div class="text-gray-400 mx-2 print:text-gray-500">→</div>
                              <div class="<%= es_correcto ? 'bg-green-900/20 text-green-300 border-green-800/30' : 'bg-red-900/20 text-red-300 border-red-800/30' %> p-2 rounded-lg border w-1/2
                                          print:<%= es_correcto ? 'bg-green-100 text-green-800 border-green-300' : 'bg-red-100 text-red-800 border-red-300' %>">
                                <%= par_seleccionado&.contenido || "No seleccionado" %>
                                
                                <% if !es_correcto && par_correcto %>
                                  <div class="mt-1 text-xs">
                                    <span class="text-gray-400 print:text-gray-600">Respuesta correcta:</span>
                                    <span class="text-green-300 ml-1 print:text-green-700"><%= par_correcto.contenido %></span>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      <% else %>
                        <p class="text-gray-500 italic print:text-gray-600">Sin respuesta</p>
                      <% end %>
                    <% end %>
                  </div>
                  
                  <% if pregunta.retroalimentacion.present? %>
                    <div class="bg-blue-900/20 p-4 rounded-lg border border-blue-800/30 print:bg-blue-100 print:border-blue-300">
                      <h4 class="text-blue-300 font-medium mb-2 print:text-blue-800">Retroalimentación:</h4>
                      <p class="text-blue-200 print:text-blue-900"><%= pregunta.retroalimentacion %></p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Panel lateral con estadísticas -->
      <div class="lg:col-span-1">
        <div class="sticky top-20 space-y-6">
          <!-- Gráfico de tipo dona para aciertos/errores -->
          <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden shadow-lg">
            <div class="p-4 border-b border-gray-800">
              <h3 class="font-medium text-white">Resumen de Respuestas</h3>
            </div>
            <div class="p-4">
              <div class="h-56" data-controller="resultados-chart" data-resultados-chart-type-value="donut">
                <canvas data-resultados-chart-target="canvas" 
                        data-correctas="<%= @preguntas_correctas %>" 
                        data-incorrectas="<%= @preguntas.count - @preguntas_correctas %>"
                        class="print:hidden"></canvas>
                
                <!-- Versión para impresión -->
                <div class="hidden print:block text-center">
                  <div class="flex items-center justify-center space-x-8">
                    <div class="text-center">
                      <div class="text-xl font-bold text-green-600"><%= @preguntas_correctas %></div>
                      <div class="text-sm text-green-700">Correctas</div>
                    </div>
                    <div class="text-center">
                      <div class="text-xl font-bold text-red-600"><%= @preguntas.count - @preguntas_correctas %></div>
                      <div class="text-sm text-red-700">Incorrectas</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Gráfico de comparación con promedio del curso -->
          <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden shadow-lg print:hidden">
            <div class="p-4 border-b border-gray-800">
              <h3 class="font-medium text-white">Comparación con el Curso</h3>
            </div>
            <div class="p-4">
              <div class="h-48" data-controller="resultados-chart" data-resultados-chart-type-value="bar">
                <canvas data-resultados-chart-target="canvas" 
                        data-user-score="<%= @intento.puntaje_total %>" 
                        data-avg-score="<%= @promedio_curso %>"
                        data-max-score="<%= @quiz.intentos.completado.maximum(:puntaje_total) || 100 %>"></canvas>
              </div>
              <div class="text-center mt-4">
                <% if @posicion_ranking && @total_intentos > 0 %>
                  <div class="text-sm text-gray-400">Tu posición:</div>
                  <div class="text-xl font-bold text-white">
                    <%= @posicion_ranking %><span class="text-gray-500 text-sm"> de <%= @total_intentos %></span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Comparación de tiempo -->
          <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden shadow-lg print:hidden">
            <div class="p-4 border-b border-gray-800">
              <h3 class="font-medium text-white">Tiempo Comparado</h3>
            </div>
            <div class="p-4">
              <div class="h-44" data-controller="resultados-chart" data-resultados-chart-type-value="time">
                <canvas data-resultados-chart-target="canvas" 
                        data-user-time="<%= @tiempo_total %>" 
                        data-avg-time="<%= @quiz.tiempo_promedio_segundos || @quiz.tiempo_limite * 60 %>"
                        data-limit-time="<%= @quiz.tiempo_limite * 60 %>"></canvas>
              </div>
              <div class="text-center mt-3 text-sm text-gray-400">
                <% 
                  tiempo_promedio = @quiz.tiempo_promedio_segundos || @quiz.tiempo_limite * 60
                  diff = @tiempo_total - tiempo_promedio
                  porcentaje = (diff.to_f / tiempo_promedio * 100).round
                %>
                
                <% if diff < 0 %>
                  Fuiste <span class="text-green-400 font-medium"><%= porcentaje.abs %>% más rápido</span> que el promedio
                <% elsif diff > 0 %>
                  Tomaste <span class="text-amber-400 font-medium"><%= porcentaje %>% más tiempo</span> que el promedio
                <% else %>
                  Igual que el tiempo promedio
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Recomendaciones personalizadas -->
          <% if !@todas_correctas %>
            <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-xl border border-gray-800 overflow-hidden shadow-lg">
              <div class="p-4 border-b border-gray-800">
                <h3 class="font-medium text-white flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                  Recomendaciones de Mejora
                </h3>
              </div>
              <div class="p-4">
                <ul class="space-y-3 text-gray-300 print:text-gray-700">
                  <% if @tipos_fallados.include?('opcion_multiple') %>
                    <li class="flex items-start">
                      <span class="text-amber-400 mr-2 mt-0.5">•</span>
                      <span>Revisa conceptos relacionados con preguntas de opción múltiple donde tuviste dificultades.</span>
                    </li>
                  <% end %>
                  
                  <% if @tipos_fallados.include?('respuesta_corta') %>
                    <li class="flex items-start">
                      <span class="text-amber-400 mr-2 mt-0.5">•</span>
                      <span>Practica la precisión en tus respuestas escritas, asegurándote de incluir palabras clave.</span>
                    </li>
                  <% end %>
                  
                  <% if @tipos_fallados.include?('emparejamiento') %>
                    <li class="flex items-start">
                      <span class="text-amber-400 mr-2 mt-0.5">•</span>
                      <span>Refuerza las relaciones entre conceptos y sus definiciones en los ejercicios de emparejamiento.</span>
                    </li>
                  <% end %>
                  
                  <% if @temas_para_reforzar.any? %>
                    <li class="flex items-start">
                      <span class="text-amber-400 mr-2 mt-0.5">•</span>
                      <span>Temas a reforzar: <%= @temas_para_reforzar.join(', ') %>.</span>
                    </li>
                  <% end %>
                  
                  <% if @tiempo_total > (@quiz.tiempo_limite * 60 * 0.9) %>
                    <li class="flex items-start">
                      <span class="text-amber-400 mr-2 mt-0.5">•</span>
                      <span>Trabaja en administrar mejor tu tiempo durante los exámenes.</span>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Botones de acción -->
    <div class="flex flex-wrap justify-center space-x-4 mt-8 print:hidden">
      <% if @quiz.intentos_disponibles_para?(current_usuario) %>
        <%= button_to quiz_intentos_path(@quiz), 
            method: :post, 
            class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white transition-colors duration-300 shadow-lg hover:shadow-blue-900/20" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
          </svg>
          Intentar de Nuevo
        <% end %>
      <% else %>
        <button disabled class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-gray-700 text-gray-400 cursor-not-allowed">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
          No hay más intentos disponibles
        </button>
      <% end %>
      
      <%= link_to quiz_path(@quiz), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-gray-700 hover:bg-gray-600 text-white transition-colors duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver al Quiz
      <% end %>
    </div>
    
    <!-- Información del pie de página para impresión -->
    <div class="hidden print:block mt-12 pt-8 border-t border-gray-300 text-black text-xs">
      <p>Resultados generados el <%= Time.current.strftime("%d/%m/%Y %H:%M") %></p>
      <p>Quiz: <%= @quiz.titulo %> | Estudiante: <%= current_usuario.nombre_completo %></p>
    </div>
  </div>
</div>

<script>
// Controlador para la animación de gráficos circulares
document.addEventListener('DOMContentLoaded', function() {
  if (typeof Stimulus !== 'undefined') {
    (() => {
      const application = Stimulus.Application.start();
      
      // Controlador para el círculo de progreso
      application.register('circle-progress', class extends Stimulus.Controller {
        static targets = ['circle', 'text'];
        static values = { 
          percentage: Number,
          color: String 
        };
        
        connect() {
          this.animateProgress();
        }
        
        animateProgress() {
          const circumference = 2 * Math.PI * 45; // 45 es el radio del círculo
          const offset = circumference - (this.percentageValue / 100) * circumference;
          
          // Configurar animación
          setTimeout(() => {
            this.circleTarget.style.strokeDashoffset = offset;
            
            // Animación del contador
            const duration = 1500; // ms
            const start = 0;
            const end = this.percentageValue;
            const range = end - start;
            const increment = range / (duration / 15); // 15ms por paso
            let current = start;
            
            const timer = setInterval(() => {
              current += increment;
              if (current >= end) {
                current = end;
                clearInterval(timer);
              }
              this.textTarget.textContent = `${Math.round(current)}%`;
            }, 15);
          }, 300);
        }
      });
      
      // Controlador para los gráficos de resultados
      application.register('resultados-chart', class extends Stimulus.Controller {
        static targets = ['canvas'];
        static values = { type: String };
        
        connect() {
          if (typeof Chart === 'undefined') {
            console.error('Chart.js no está disponible');
            return;
          }
          
          // Determinar qué tipo de gráfico crear
          switch(this.typeValue) {
            case 'donut':
              this.createDonutChart();
              break;
            case 'bar':
              this.createBarChart();
              break;
            case 'time':
              this.createTimeChart();
              break;
            default:
              console.error('Tipo de gráfico no válido');
          }
        }
        
        createDonutChart() {
          const correctas = parseInt(this.canvasTarget.dataset.correctas, 10);
          const incorrectas = parseInt(this.canvasTarget.dataset.incorrectas, 10);
          
          new Chart(this.canvasTarget, {
            type: 'doughnut',
            data: {
              labels: ['Correctas', 'Incorrectas'],
              datasets: [{
                data: [correctas, incorrectas],
                backgroundColor: ['#10B981', '#EF4444'],
                borderWidth: 0,
                hoverOffset: 4
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              cutout: '70%',
              plugins: {
                legend: {
                  position: 'bottom',
                  labels: {
                    color: '#E5E7EB',
                    padding: 15,
                    font: {
                      size: 12
                    }
                  }
                },
                tooltip: {
                  backgroundColor: '#374151',
                  titleColor: '#FFFFFF',
                  bodyColor: '#E5E7EB',
                  borderColor: '#4B5563',
                  borderWidth: 1,
                  displayColors: false,
                  callbacks: {
                    label: function(context) {
                      const total = correctas + incorrectas;
                      const percentage = Math.round((context.raw / total) * 100);
                      return `${context.label}: ${context.raw} (${percentage}%)`;
                    }
                  }
                }
              },
              animation: {
                animateRotate: true,
                animateScale: true
              }
            }
          });
        }
        
        createBarChart() {
          const userScore = parseFloat(this.canvasTarget.dataset.userScore);
          const avgScore = parseFloat(this.canvasTarget.dataset.avgScore);
          const maxScore = parseFloat(this.canvasTarget.dataset.maxScore);
          
          new Chart(this.canvasTarget, {
            type: 'bar',
            data: {
              labels: ['Tu puntaje', 'Promedio', 'Mejor puntaje'],
              datasets: [{
                data: [userScore, avgScore, maxScore],
                backgroundColor: ['#4F46E5', '#10B981', '#F59E0B'],
                borderRadius: 6,
                borderWidth: 0
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                y: {
                  beginAtZero: true,
                  max: 100,
                  grid: {
                    color: '#374151',
                    borderColor: '#4B5563',
                    drawBorder: false
                  },
                  ticks: {
                    color: '#9CA3AF',
                    callback: function(value) {
                      return value + '%';
                    }
                  }
                },
                x: {
                  grid: {
                    display: false
                  },
                  ticks: {
                    color: '#9CA3AF'
                  }
                }
              },
              plugins: {
                legend: {
                  display: false
                },
                tooltip: {
                  backgroundColor: '#374151',
                  titleColor: '#FFFFFF',
                  bodyColor: '#E5E7EB',
                  borderColor: '#4B5563',
                  borderWidth: 1,
                  callbacks: {
                    label: function(context) {
                      return `${context.raw.toFixed(1)}%`;
                    }
                  }
                }
              },
              animation: {
                duration: 1500,
                easing: 'easeOutQuart'
              }
            }
          });
        }
        
        createTimeChart() {
          const userTime = parseInt(this.canvasTarget.dataset.userTime, 10);
          const avgTime = parseInt(this.canvasTarget.dataset.avgTime, 10);
          const limitTime = parseInt(this.canvasTarget.dataset.limitTime, 10);
          
          // Convertir a minutos para mostrar
          const userTimeMin = (userTime / 60).toFixed(1);
          const avgTimeMin = (avgTime / 60).toFixed(1);
          const limitTimeMin = (limitTime / 60).toFixed(1);
          
          new Chart(this.canvasTarget, {
            type: 'bar',
            data: {
              labels: ['Tu tiempo', 'Tiempo promedio', 'Tiempo límite'],
              datasets: [{
                data: [userTimeMin, avgTimeMin, limitTimeMin],
                backgroundColor: ['#4F46E5', '#10B981', '#F59E0B'],
                borderRadius: 6,
                borderWidth: 0
              }]
            },
            options: {
              indexAxis: 'y',
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                x: {
                  grid: {
                    color: '#374151',
                    borderColor: '#4B5563',
                    drawBorder: false
                  },
                  ticks: {
                    color: '#9CA3AF',
                    callback: function(value) {
                      return value + ' min';
                    }
                  }
                },
                y: {
                  grid: {
                    display: false
                  },
                  ticks: {
                    color: '#9CA3AF'
                  }
                }
              },
              plugins: {
                legend: {
                  display: false
                },
                tooltip: {
                  backgroundColor: '#374151',
                  titleColor: '#FFFFFF',
                  bodyColor: '#E5E7EB',
                  borderColor: '#4B5563',
                  borderWidth: 1,
                  callbacks: {
                    label: function(context) {
                      return `${context.raw} minutos`;
                    }
                  }
                }
              },
              animation: {
                duration: 1500,
                easing: 'easeOutQuart'
              }
            }
          });
        }
      });
      
      // Controlador para el conteo animado
      application.register('count-up', class extends Stimulus.Controller {
        connect() {
          const target = parseInt(this.element.getAttribute('data-target'), 10);
          this.countUp(0, target, 1500); // 1.5 segundos de duración
        }
        
        countUp(current, target, duration) {
          const increment = target / (duration / 20); // 20ms por paso
          const timer = setInterval(() => {
            current += increment;
            if (current >= target) {
              current = target;
              clearInterval(timer);
            }
            this.element.textContent = Math.round(current);
          }, 20);
        }
      });
    })();
  }
});
</script>