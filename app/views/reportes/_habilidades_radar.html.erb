<!-- app/views/reportes/_habilidades_radar.html.erb -->
<div class="space-y-4">
  <% habilidades.each do |categoria, nivel| %>
    <div>
      <div class="flex justify-between mb-1">
        <span class="text-sm font-medium"><%= categoria %></span>
        <span class="text-sm text-gray-600">
          <%= number_to_percentage(nivel, precision: 0) %>
        </span>
      </div>
      <div class="h-2 bg-gray-200 rounded">
        <div class="h-full bg-blue-500 rounded transition-all duration-300"
             style="width: <%= nivel %>%">
        </div>
      </div>
    </div>
  <% end %>
</div>