# Frontend
gem 'importmap-rails'
gem 'sassc-rails'
gem 'sprockets-rails'
gem 'stimulus-rails'
gem 'tailwindcss-rails'
gem 'turbo-rails'

# Caché y background jobs
gem 'redis'
gem 'sidekiq'

# Generación de PDF y CSV
gem 'prawn'
gem 'prawn-table'

# Paginación
