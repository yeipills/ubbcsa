FROM debian:bullseye-slim

# Instalar dependencias y herramientas necesarias
RUN apt-get update && apt-get install -y \
    curl \
    sudo \
    git \
    vim \
    netcat \
    iputils-ping \
    dnsutils \
    openssl \
    && curl -fsSL https://deb.nodesource.com/setup_16.x | bash - \
    && apt-get install -y nodejs \
    && apt-get install -y \
    openssh-server \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Instalar Wetty globalmente
RUN npm install -g wetty axios

# Configurar usuario kali con permisos sudo y contrase침a
RUN useradd -m -s /bin/bash kali && \
    echo "kali:kali" | chpasswd && \
    usermod -aG sudo kali

# Configurar usuarios din치micos desde Rails
RUN mkdir -p /usr/local/bin
COPY ./labs/create_dynamic_user.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/create_dynamic_user.sh

# Configurar SSH para permitir acceso con usuario y contrase침a
RUN mkdir -p /var/run/sshd && \
    echo "PermitRootLogin yes" >> /etc/ssh/sshd_config && \
    echo "PasswordAuthentication yes" >> /etc/ssh/sshd_config && \
    echo "ChallengeResponseAuthentication no" >> /etc/ssh/sshd_config && \
    echo "UsePAM yes" >> /etc/ssh/sshd_config

# Permitir a usuarios conectarse con contrase침a
RUN sed -i 's/^#*\(UsePAM\) .*/\1 yes/' /etc/ssh/sshd_config

# Asegurar que el servicio SSH se ejecute correctamente
RUN mkdir -p /home/kali/.ssh && chmod 700 /home/kali/.ssh

# Configurar mensajes de bienvenida personalizados
RUN echo "Bienvenido al Laboratorio de Ciberseguridad UBB" > /etc/motd
RUN echo "export PS1='\[\033[01;32m\]\u@lab\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$ '" >> /home/kali/.bashrc

# Configurar directorio de datos y logs
RUN mkdir -p /home/kali/lab_data /home/kali/logs
RUN chown -R kali:kali /home/kali/lab_data /home/kali/logs

# Generar un certificado autofirmado para desarrollo
RUN mkdir -p /etc/ssl/private /etc/ssl/certs && \
    openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
    -keyout /etc/ssl/private/wetty.key -out /etc/ssl/certs/wetty.crt \
    -subj "/C=CL/ST=BioBio/L=Concepcion/O=UBB/CN=wetty.local"

# Script de inicio
COPY start.sh /start.sh
RUN chmod +x /start.sh

# Exponer los puertos necesarios
EXPOSE 22 3001

# Variables de entorno
ENV RAILS_HOST=web
ENV RAILS_PORT=3000
ENV NODE_ENV=development

# Comando de inicio
CMD ["/start.sh"]
